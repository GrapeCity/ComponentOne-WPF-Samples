<UserControl x:Class="ControlExplorer.NumericProperties"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="58"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="checkNullable" Grid.Column="0" Checked="checkNullable_Checked" Unchecked="checkNullable_Unchecked" Width="30" Margin="0 0 -12 0"  HorizontalAlignment="Left"/>
        <Slider x:Name="slider" Grid.Column="1" ValueChanged="slider_ValueChanged" />
        <TextBlock x:Name="lblNumber" Grid.Column="2" FontSize="10" Margin="5 0 0 0" HorizontalAlignment="Right" VerticalAlignment="Center" />
    </Grid>
</UserControl>
