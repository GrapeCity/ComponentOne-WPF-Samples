<Application x:Class="DataViewDashboard.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:DataViewDashboard.ViewModels"
             xmlns:c="clr-namespace:DataViewDashboard.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        
        <!-- Converters -->
        <c:ImageFromDBConverter x:Key="imageFromDBConverter" />
        <c:PriceConverter x:Key="priceConverter" />
        <c:DateTimeConverter x:Key="dateTimeConverter" />
        <c:NullStringConverter x:Key="nullStringConverter" />
        <c:HasOrdersVisibilityConverter x:Key="hasOrdersVisibilityConverter" />
        <c:StatusColorConverter x:Key="statusColorConverter" />
        <c:StatusLabelConverter x:Key="statusLabelConverter" />
        <c:ColorConverter x:Key="colorConverter" />
        <c:BoolVisibilityConverter x:Key="boolVisibilityConverter" />
        <c:OrderCostConverter x:Key="orderCostConverter" />
        <c:OrderLineTotalConverter x:Key="orderLineTotalConverter" />
        <c:OrderQuantityConverter x:Key="orderQuantityConverter" />
        <c:SalesPersonNameConverter x:Key="salesPersonNameConverter" />
        <c:ProductDescriptionConverter x:Key="productDescriptionConverter" />
        
        <SolidColorBrush x:Key="HighlightBrush" Color="#3EB3F5" />
    </Application.Resources>
</Application>
