<UserControl x:Class="DataGridSamples.FilterRow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml">
    <Grid>
        <c1:C1DataGrid x:Name="grid" Grid.Row="1" 
                             AutoGeneratingColumn="grid_AutoGeneratingColumn" 
                             CanUserAddRows="False"
                             CanUserFreezeColumns="Left"
                             FrozenTopRowsCount="1"
                             FrozenBottomRowsCount="1"
                             RowHeight="30"
                             IsReadOnly="true">
            <c1:C1DataGrid.TopRows>
                <c1:DataGridFilterRow />
            </c1:C1DataGrid.TopRows>
            <c1:C1DataGrid.BottomRows>
                <c1:DataGridFilterRow/>
            </c1:C1DataGrid.BottomRows>
        </c1:C1DataGrid>
    </Grid>
</UserControl>
