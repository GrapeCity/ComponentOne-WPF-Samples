<UserControl x:Class="InputPanelSample.Integration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:InputPanelSample"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <c1:C1TabControl>
            <c1:C1TabItem Header="Integration MSDataGrid">
                <local:IntegrationMSDataGrid />
            </c1:C1TabItem>
            <c1:C1TabItem Header="Integration C1DataGrid">
                <local:IntegrationC1DataGrid />
            </c1:C1TabItem>
            <c1:C1TabItem Header="Integration C1FlexGrid">
                <local:IntegrationC1FlexGrid/>
            </c1:C1TabItem>
        </c1:C1TabControl>
    </Grid>
</UserControl>
