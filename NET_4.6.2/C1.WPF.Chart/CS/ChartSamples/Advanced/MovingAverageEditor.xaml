<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ChartSamples.MovingAverageEditor" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:c1="clr-namespace:C1.WPF;assembly=C1.WPF.4.6.2" xmlns:local="clr-namespace:ChartSamples">
    <Grid x:Name="LayoutRoot">
    	<Border>
		    <StackPanel Orientation="Horizontal">
		      <StackPanel x:Name="hPeriod" Orientation="Horizontal">
		        <TextBlock Text="Period:" Margin="0 0 5 0" VerticalAlignment="Center" />
		        <c1:C1NumericBox x:Name="nbPeriod" Width="60" Minimum="2" Maximum="1000" ValueChanged="nbPeriod_ValueChanged" />
		      </StackPanel>
		    </StackPanel>
		</Border>	
	</Grid>
			
</UserControl>