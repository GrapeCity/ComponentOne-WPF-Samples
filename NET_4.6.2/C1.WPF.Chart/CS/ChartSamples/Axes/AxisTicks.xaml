<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ChartSamples.AxisTicks" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:c1chart="clr-namespace:C1.WPF.C1Chart;assembly=C1.WPF.C1Chart.4.6.2" xmlns:local="clr-namespace:ChartSamples">

    <Grid x:Name="LayoutRoot">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>
    <TabControl VerticalAlignment="Top" Grid.Row="1">
      <TabItem Header="X Axis">
        <local:TickEditor x:Name="tex" />
      </TabItem>
      <TabItem Header="Y Axis">
        <local:TickEditor x:Name="tey" />
      </TabItem>
    </TabControl>

    <c1chart:C1Chart x:Name="chart" Grid.Row="2" ChartType="Line" />
  </Grid>
</UserControl>