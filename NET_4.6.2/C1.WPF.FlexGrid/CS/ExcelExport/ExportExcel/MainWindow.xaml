<Window xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"  x:Class="ExportExcel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Excel FlexGrid Application" Height="350" Width="525" WindowState="Maximized">
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnExport" Content="Export as" Click="btnExport_Click" />
        </StackPanel>
        <c1:C1FlexGrid Grid.Row="1" Name="C1FlexGrid1" />
    </Grid>
</Window>
