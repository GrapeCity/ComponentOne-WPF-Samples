<Window x:Class="ExtendLastColumn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
        Title="C1FlexGrid: Column Star-Sizing with MinWidth" 
        Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="LastColumn: Width=*, MinWitdh=180" FontSize="18"/>
        <c1:C1FlexGrid Name="_flex1" Grid.Row="1" />

        <TextBlock Text="LastColumn: Width=*, MinWitdh=Auto" Grid.Row="2" FontSize="18"/>
        <c1:C1FlexGrid Name="_flex2" Grid.Row="3" />
    </Grid>
</Window>
