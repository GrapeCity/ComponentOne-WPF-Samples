<Window x:Class="DynamicImages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
        Title="C1FlexGrid: Dynamic Images" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <c1:C1FlexGrid Name="_flex" AutoGenerateColumns="False" >
            <c1:C1FlexGrid.Columns>
                <c1:Column Header="Item Type" Binding="{Binding ItemType, Mode=TwoWay}" />
                <c1:Column Header="Rating" Binding="{Binding Rating, Mode=TwoWay}" />
                <c1:Column Header="Name" Binding="{Binding Name, Mode=TwoWay}" />
                <c1:Column Header="Image" ColumnName="ItemImage"/>
            </c1:C1FlexGrid.Columns>
        </c1:C1FlexGrid>
    </Grid>
</Window>
