<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
    Title="MainWindow" Loaded="Window_Loaded" Height="350" Width="525">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
            <TextBlock Text="C1.WPF.Olap: Customize Page" VerticalAlignment="Center" Margin="10,5" FontSize="18" FontWeight="Bold" />
            <Button Content="Update" Margin="10,5" Width="80" Click="Button_Click" />
        </StackPanel>

        <c1:C1OlapPage Name="_c1OlapPage" Grid.Row="1" />
    </Grid>
</Window>
