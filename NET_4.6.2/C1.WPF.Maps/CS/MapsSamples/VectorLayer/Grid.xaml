<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="MapsSamples.Grid" Background="#FF374F5D" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml">
  <UserControl.Resources>
    <SolidColorBrush x:Key="CE_SampleBorder" Color="#FF8FB4CC" />
  </UserControl.Resources>
  <Grid x:Name="LayoutRoot">
    <Border BorderBrush="{StaticResource CE_SampleBorder}" BorderThickness="3">
      <c1:C1Maps x:Name="maps" Zoom="2" />
    </Border>
    </Grid>
</UserControl>