<Window x:Class="DemoTables.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="758" Width="734" xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <c1:C1DocumentViewer Name="c1DocumentViewer1" Grid.Row="1"/>
        <ComboBox x:Name="cmbSel" Margin="2" HorizontalAlignment="Left"
                  SelectionChanged="ComboBox_SelectionChanged" SelectedIndex="0">
            <ComboBoxItem Tag="btnBasicTable" >Basic Table</ComboBoxItem>
            <ComboBoxItem Tag="btnStylesInTables" >Styles In Tables</ComboBoxItem>
            <ComboBoxItem Tag="btnWideTables" >Wide Tables</ComboBoxItem>
            <ComboBoxItem Tag="btnTextStyles">Text Styles</ComboBoxItem>
            <ComboBoxItem Tag="btnLargeTable" >Large Table</ComboBoxItem>
            <ComboBoxItem Tag="btnTableBorders" >Table Borders</ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>
