<Window x:Class="Localization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Localization"
        xmlns:views="clr-namespace:Localization.Views"
        xmlns:vms="clr-namespace:Localization.ViewModel"
        Title="ComponentOne"
        MinHeight="750" 
        MinWidth="1270"
        >

    <Window.Resources>
        <!--Styling the InlineText of the Textblock-->
        <Style x:Key="TextStyle" TargetType="Run">
            <Setter Property="FontSize" Value="14pt"/>
            <Setter Property="FontFamily" Value="Roboto"/>
        </Style>

        <Style x:Key="TexBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Window.Resources>
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- header -->
        <Border Height="55" Background="#F2F2F2" VerticalAlignment="Top">
            <Grid Margin="15,-3,15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="170" />
                </Grid.ColumnDefinitions>

                <Image Source="/C1Logo.png" Height="36" Margin="0,0,10,0"/>
                
                <TextBlock Grid.Column="1" VerticalAlignment="Center" 
                           HorizontalAlignment="Left" 
                           Style="{StaticResource TexBlockStyle}" >
                    <TextBlock.Inlines>
                        <Run Text="Component" Style="{StaticResource TextStyle}" FontWeight="Medium"/>
                        <Run Text="One" Style="{StaticResource TextStyle}" FontWeight="Light" />
                        <Run Text="|" FontSize="25" />
                        <Run Text="WPF" Style="{StaticResource TextStyle}" FontWeight="Bold" />
                        <Run Text="Built-in Localization" Style="{StaticResource TextStyle}" FontWeight="Light" />
                    </TextBlock.Inlines>
                </TextBlock>

                <StackPanel Grid.Column="3" Margin="0 2 0 2" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{Binding PickLanguage, Source={StaticResource UIStrings}}" 
                               Style="{StaticResource TexBlockStyle}"  
                               FontSize="13" />
                    <ComboBox x:Name="localizationCombo" Margin="0 2 0 0" Width="170" Height="25" />
                </StackPanel>
            </Grid>
        </Border>
        
        <!--Body-->
        <views:TabControl Grid.Row="1"/>
    </Grid>
</Window>
