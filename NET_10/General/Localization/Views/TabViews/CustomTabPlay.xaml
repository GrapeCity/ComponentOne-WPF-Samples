<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Localization.Views.TabViews"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" x:Class="Localization.Views.TabViews.CustomTabPlay"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" BorderBrush="LightGray" BorderThickness="0,0,0.5,0">
            <c1:PivotHeaderOptions/>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="LightGray" BorderThickness="0,0,0,0">
            <c1:ConditionalFieldStyleEditor />
        </Border>
        <Border Grid.Row="0" Grid.Column="1" BorderBrush="LightGray" BorderThickness="0,0,0,0.5">
            <c1:CustomFilterEditor/>
        </Border>
        <Border Grid.Column="0" Grid.Row="1" BorderBrush="LightGray" BorderThickness="0,0.5,0.5,0">
            <c1:PivotMarginOptions />
        </Border>
    </Grid>
</UserControl>
