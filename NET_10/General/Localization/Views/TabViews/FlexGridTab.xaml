<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Localization.Views.TabViews"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" x:Class="Localization.Views.TabViews.FlexGridTab"
             xmlns:vms ="clr-namespace:Localization.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <vms:FlexGridTabViewModel x:Key="FlexGridDataSource"/>
    </UserControl.Resources>
    <Grid DataContext="{StaticResource FlexGridDataSource}">

        <c1:FlexGrid HorizontalAlignment="Left" 
                     VerticalAlignment="Top" 
                     ItemsSource="{Binding People}"/>

    </Grid>
</UserControl>
