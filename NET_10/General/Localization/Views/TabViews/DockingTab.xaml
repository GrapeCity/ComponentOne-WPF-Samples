<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Localization.Views.TabViews"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" x:Class="Localization.Views.TabViews.DockingTab"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <c1:C1DockPanel>
            <c1:C1DockControl>
                <c1:C1DockTabControl Dock="Left">
                    <c1:C1DockTabItem Background="Red" Header="Red Item" />
                </c1:C1DockTabControl>
                <c1:C1DockTabControl Dock="Right">
                    <c1:C1DockTabItem Background="Yellow" Header="Yellow Item" />
                </c1:C1DockTabControl>
                <c1:C1DockTabControl Dock="Bottom">
                    <c1:C1DockTabItem Background="Green" Header="Green Item" />
                </c1:C1DockTabControl>
                <c1:C1DockTabControl>
                    <c1:C1DockTabItem Background="Blue" Header="Blue Item">
                    </c1:C1DockTabItem>
                </c1:C1DockTabControl>
            </c1:C1DockControl>
        </c1:C1DockPanel>
    </Grid>
</UserControl>
