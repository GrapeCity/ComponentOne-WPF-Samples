<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Localization.Views.TabViews"
             xmlns:converter="clr-namespace:Localization.Converters"
             xmlns:vms="clr-namespace:Localization.ViewModel"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" 
             x:Class="Localization.Views.TabViews.SchedularTab"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <converter:ScheduleStringConverter x:Key="ScheduleStringConverter"/>
            <vms:ScheduleTabViewModel x:Key="ScheduleViewModel"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <c1:C1TabControl TabStripPlacement="Left" 
                         Margin="5" 
                         DataContext="{StaticResource ScheduleViewModel}"
                         IndicatorPlacement="Right"                          
                         UnselectedContentMode="OutsideVisualTree"
                         BorderThickness="0.5 0 0 0"
                         BorderBrush="LightGray">

            <c1:C1TabItem Header="Calendar" 
                              BorderThickness="0">
                <c1:C1Calendar SelectionMode="Extended" 
                                   MaxSelectionCount="21" 
                                   MinHeight="280" 
                                   MinWidth="280" 
                                   Margin="5"
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" 
                                   ShowAdjacentDay="True" />
            </c1:C1TabItem>
            <c1:C1TabItem Header="Scheduler" BorderThickness="0">
                <Grid Margin="10" Name="calendarGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MaxWidth="342" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <c1:C1ToolStrip Grid.ColumnSpan="2" 
                                    HorizontalAlignment="Stretch">
                        <TextBlock Margin="2" 
                                   Text="{Binding ScheduleView, Source={StaticResource UIStrings}}" 
                                   VerticalAlignment="Center"/>
                        <c1:C1ComboBox x:Name="ViewType" 
                                       VerticalAlignment="Center"  
                                       SelectedItem="{Binding ViewType, ElementName=sched1}"
                                       ItemsSource="{Binding AvailableViewTypes}" 
                                       Margin="2" 
                                       MinWidth="120">
                            <c1:C1ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource ScheduleStringConverter}}"/>
                                </DataTemplate>
                            </c1:C1ComboBox.ItemTemplate>
                        </c1:C1ComboBox>
                        <c1:C1CheckBox x:Name="Grouping" 
                                       Content="{Binding EnableGrouping, Source={StaticResource UIStrings}}"
                                       Checked="Grouping_Checked"
                                       Unchecked="Grouping_Unchecked"/>
                        
                        <c1:C1CheckBox Content="{Binding ShowWeekTabs, Source={StaticResource UIStrings}}" 
                                       IsChecked="{Binding ShowWeekTabs, ElementName=sched1, Mode=TwoWay}" 
                                       Margin="2"
                                       MinWidth="120"/>
                    </c1:C1ToolStrip>
                    <c1:C1MultiMonthCalendar x:Name="cal1" 
                                             Grid.Column="0" 
                                             Grid.Row="1" 
                                             SelectionMode="Extended" 
                                             MonthCount="3" 
                                             MaxSelectionCount="42"  
                                             ShowAdjacentDay="True" MonthWidth="310"
                                             SelectedDates="{Binding VisibleDates, ElementName=sched1, Mode=OneWay}"
                                             BoldedDates="{Binding BoldedDates, ElementName=sched1, Mode=OneWay}"/>
                    <c1:C1Scheduler x:Name="sched1" 
                                    Grid.Column="1" 
                                    Grid.Row="1">
                        <c1:C1Scheduler.Settings>
                            <c1:C1SchedulerSettings SetReminder="False" 
                                                    AllowCategoriesMultiSelection="False" 
                                                    AllowCategoriesEditing="False"/>
                        </c1:C1Scheduler.Settings>
                    </c1:C1Scheduler>
                </Grid>
            </c1:C1TabItem>
        </c1:C1TabControl>
    </Grid>
</UserControl>
