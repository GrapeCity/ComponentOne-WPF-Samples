<UserControl x:Class="Localization.Views.TabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Localization.Views"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:usercontrols ="clr-namespace:Localization.Views.TabViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="c1:C1TabControl" x:Key="TabControlStyling">
            <Setter Property="TabStripPlacement" Value="Bottom"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="0 0.5 0 0.5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Grid.Row" Value="1"/>
            <Setter Property="TabStripHorizontalAlignment" Value="Center"/>
            <Setter Property="TabStripVerticalAlignment" Value="Center"/>
            <Setter Property="SelectedIndex" Value="0"/>
        </Style>

        <Style TargetType="c1:C1TabItem">
            <Setter Property="Padding" Value="20 15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
        </Style>
        
    </UserControl.Resources>
    
    <Grid>
        <c1:C1TabControl x:Name="tabControl"
                         Style="{StaticResource TabControlStyling}"
                         SelectionChanged="C1TabControl_SelectionChanged" 
                         >
            
            <!--RichTextBox Tab-->
            <c1:C1TabItem Header="RichTextBox">
                <usercontrols:RichTextBoxTab/>
            </c1:C1TabItem>

            <!--Schedule Tab-->
            
            <c1:C1TabItem Header="Scheduler">
                <usercontrols:SchedularTab/>
            </c1:C1TabItem>

            <!--Flex Grid-->
            <c1:C1TabItem Header="FlexGrid">
                <usercontrols:FlexGridTab/>
                <!--<c1:FlexGrid x:Name="flexGrid"/>-->
            </c1:C1TabItem>

            <!--Docking Tab-->
            <c1:C1TabItem Header="Docking">
                <usercontrols:DockingTab/>
            </c1:C1TabItem>

            <!--Color Picker Tab-->
            <c1:C1TabItem Header="ColorPicker">
                <usercontrols:ColorPickerTab/>
            </c1:C1TabItem>

            <!--FlexPivot Tab-->
            <c1:C1TabItem Header="FlexPivot">
                <usercontrols:FlexPivotTab/>
                <!--<c1:FlexPivotPage x:Name="pivotChart" />-->
            </c1:C1TabItem>

            <!--GanttView Tab-->
            <c1:C1TabItem Header="GanttView">
                <usercontrols:GanttViewTab/>
                <!--<c1:C1GanttView x:Name="ganttView"/>-->
            </c1:C1TabItem>

        </c1:C1TabControl>
    </Grid>
</UserControl> 
