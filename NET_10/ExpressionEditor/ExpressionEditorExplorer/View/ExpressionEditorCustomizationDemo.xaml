<UserControl x:Class="ExpressionEditorExplorer.ExpressionEditorCustomizationDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExpressionEditorExplorer"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <SolidColorBrush x:Key="ForegroundBrush" Color="DarkSlateBlue"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="AliceBlue"/>
        <SolidColorBrush x:Key="MouseOverBrush" Color="LightSkyBlue" Opacity="0.3"/>
        <SolidColorBrush x:Key="SelectedBrush" Color="LightSkyBlue" Opacity="0.8"/>
        <SolidColorBrush x:Key="BorderBrush" Color="DarkBlue" Opacity="0.4"/>

        <c1:SyntaxStyle x:Key="FunctionsSyntaxStyle" Foreground="Blue"/>
        <c1:SyntaxStyle x:Key="FieldsSyntaxStyle" Foreground="Purple"/>
        <c1:SyntaxStyle x:Key="ConstantsSyntaxStyle" Foreground="Green"/>
        <c1:SyntaxStyle x:Key="OperatorsSyntaxStyle" Foreground="{StaticResource ForegroundBrush}"/>
        <c1:SyntaxStyle x:Key="NumberSyntaxStyle" Foreground="Black"/>
        <c1:SyntaxStyle x:Key="StringsSyntaxStyle" Foreground="Red"/>
    </UserControl.Resources>
    
    <c1:C1ScrollViewer>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="500"/>
            </Grid.RowDefinitions>

            <c1:C1ExpressionEditor x:Name="expressionEditor"
                                   ShowErrorBox="False" 
                                   BorderThickness="2 2 2 0"
                                   CornerRadius="5 5 0 0"
                                   MinHeight="80"
                                   Background="AliceBlue"
                                   FunctionsStyle="{StaticResource FunctionsSyntaxStyle}"
                                   FieldsStyle="{StaticResource FieldsSyntaxStyle}"
                                   ConstantsStyle="{StaticResource ConstantsSyntaxStyle}"
                                   OperatorsStyle="{StaticResource OperatorsSyntaxStyle}"
                                   NumbersStyle="{StaticResource NumberSyntaxStyle}"
                                   StringsStyle="{StaticResource StringsSyntaxStyle}">
                <c1:C1ExpressionEditor.Engine>
                    <c1:C1ExpressionEngine CurrentIndex="0" Expression="sqrt([Age])"/>
                </c1:C1ExpressionEditor.Engine>
                <c1:C1ExpressionEditor.EditorStyle>
                    <Style TargetType="c1:C1RichTextBox">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="CornerRadius" Value="5"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        <Setter Property="Background" Value="White"/>
                    </Style>
                </c1:C1ExpressionEditor.EditorStyle>
                <c1:C1ExpressionEditor.DescriptionPopupStyle>
                    <Style TargetType="c1:C1PopupBorder">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="CornerRadius" Value="5"/>
                        <Setter Property="Background" Value="AliceBlue"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                    </Style>
                </c1:C1ExpressionEditor.DescriptionPopupStyle>
                <c1:C1ExpressionEditor.SuggestListPopupStyle>
                    <Style TargetType="c1:C1PopupBorder">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="CornerRadius" Value="5"/>
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                    </Style>
                </c1:C1ExpressionEditor.SuggestListPopupStyle>
                <c1:C1ExpressionEditor.SuggestListStyle>
                    <Style TargetType="c1:C1ListView">
                        <Setter Property="MouseOverBrush" Value="{StaticResource MouseOverBrush}"/>
                        <Setter Property="SelectedBackground" Value="{StaticResource SelectedBrush}"/>
                    </Style>
                </c1:C1ExpressionEditor.SuggestListStyle>
            </c1:C1ExpressionEditor>

            <c1:C1ExpressionEditorPanel Name="expressionEditorPanel"
                                        Grid.Row="1" Editor="{Binding ElementName=expressionEditor}"
                                        Foreground="{StaticResource ForegroundBrush}"
                                        Background="{StaticResource BackgroundBrush}"
                                        BorderThickness="2 0 2 2"
                                        AutoGeneratingCategory="ExpressionEditorPanel_AutoGeneratingCategory"
                                        CornerRadius="0 0 5 5">
                <c1:C1ExpressionEditorPanel.ButtonStyle>
                    <Style TargetType="c1:C1Button">
                        <Setter Property="Padding" Value="3"/>
                        <Setter Property="Margin" Value="6 6 0 6"/>
                        <Setter Property="Height" Value="28"/>
                        <Setter Property="Width" Value="28"/>
                        <Setter Property="CornerRadius" Value="5"/>
                        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                        <Setter Property="MouseOverBrush" Value="{StaticResource MouseOverBrush}"/>
                        <Setter Property="PressedBrush" Value="{StaticResource SelectedBrush}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                    </Style>
                </c1:C1ExpressionEditorPanel.ButtonStyle>
                <c1:C1ExpressionEditorPanel.CategoriesTreeViewStyle>
                    <Style TargetType="c1:C1TreeView">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                        <Setter Property="MouseOverBrush" Value="{StaticResource MouseOverBrush}"/>
                        <Setter Property="SelectedBackground" Value="{StaticResource SelectedBrush}"/>
                    </Style>
                </c1:C1ExpressionEditorPanel.CategoriesTreeViewStyle>
                <c1:C1ExpressionEditorPanel.ExpressionItemsListViewStyle>
                    <Style TargetType="c1:C1ListView">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                        <Setter Property="MouseOverBrush" Value="{StaticResource MouseOverBrush}"/>
                        <Setter Property="SelectedBackground" Value="{StaticResource SelectedBrush}"/>
                    </Style>
                </c1:C1ExpressionEditorPanel.ExpressionItemsListViewStyle>
                <c1:C1ExpressionEditorPanel.DescriptionPanelStyle>
                    <Style TargetType="c1:C1Border">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="c1:C1Border">
                                    <TextBlock Height="40" Padding="5" TextWrapping="Wrap" Foreground="RoyalBlue" Text="{Binding Description}"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </c1:C1ExpressionEditorPanel.DescriptionPanelStyle>
            </c1:C1ExpressionEditorPanel>
        </Grid>
    </c1:C1ScrollViewer>
</UserControl>
