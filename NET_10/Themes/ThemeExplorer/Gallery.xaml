<UserControl x:Class="ThemeExplorer.Gallery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ThemeExplorer"
             xmlns:c1gantt="clr-namespace:C1.GanttView;assembly=C1.WPF.GanttView"
             xmlns:p="clr-namespace:ThemeExplorer.Properties"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/C1.WPF.Core;component/themes/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Scheduler Dropdown local converter -->
            <local:ScheduleStringConverter x:Key="ScheduleStringConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" >
            <TextBlock Text="{x:Static p:Resources.Theme}" Margin="5" VerticalAlignment="Center" FontWeight="Bold"/>
            <c1:C1ComboBox x:Name="themes" IsEditable="False" SelectedItemChanged="themes_SelectedItemChanged" Width="200" Margin="5" Height="30" />
        </StackPanel>

        <c1:C1TabControl CanUserReorder="True" Grid.Row="1" UnselectedContentMode="OutsideVisualTree" TabStripMenuVisibility="Visible"  TabIndex="4">
            <c1:C1TabItem Header="{x:Static p:Resources.DataManagement}" UnselectedContentMode="OutsideVisualTree" >
                <c1:C1TabControl TabStripPlacement="Left" Margin="5" IndicatorPlacement="Right" 
                             SelectionChanged="DataManagement_SelectionChanged" UnselectedContentMode="OutsideVisualTree" SelectedIndex="0">
                    <c1:C1TabItem Header="{x:Static p:Resources.FlexGrid}" BorderThickness="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <c1:C1CheckBox Grid.Row="0" Content="Tree Grid Mode" Margin="4" MinWidth="80" Checked="C1CheckBox_Checked" Unchecked="C1CheckBox_Unchecked"/>
                            <StackPanel Orientation="Horizontal" Grid.Row="1"  Margin="4">
                                <TextBlock Text="Tree Lines Mode" VerticalAlignment="Center"/>
                                <c1:C1ComboBox SelectedItem="{Binding ElementName=flexGrid,Path=TreeLinesMode}" ItemsSource="{Binding DataContext.TreeLinesModes}" Margin="4 0" MinWidth="80"/>
                            </StackPanel>
                            <c1:FlexGrid x:Name="flexGrid" Grid.Row="2" Margin="10" FrozenColumns="1" ShowOutlineBar="True"
                                     ShowMarquee="True" HeadersVisibility="All" SelectionMode="CellRange"  AllowGrouping="True" >
                                <c1:FlexGrid.ColumnFooterRows>
                                    <c1:GridSummaryRow OptionsMenuVisibility="MouseOver" Height="Auto"/>
                                </c1:FlexGrid.ColumnFooterRows>
                            </c1:FlexGrid>
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{x:Static p:Resources.ListView}" BorderThickness="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <c1:C1CheckBox x:Name="ShowHideCheckBoxes" Grid.Row="0" Margin="10,5,0,0" VerticalAlignment="Center" Content="Show/Hide CheckBoxes"/>
                            <c1:C1ListView x:Name="listView" Margin="10" Grid.Row="1" DisplayMemberPath="Name" ShowSelectAll="True" SelectionMode="Extended" ShowCheckBoxes="{Binding IsChecked, ElementName=ShowHideCheckBoxes}"/>
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{x:Static p:Resources.FlexPivot}" BorderThickness="0">
                        <c1:FlexPivotPage x:Name="pivot" Margin="10"/>
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{x:Static p:Resources.DataFilter}" BorderThickness="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="450" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <c1:C1DataFilter x:Name="c1DataFilter1" AutoGenerateFilters="False" ExpandMode="Any">
                                <c1:C1DataFilter.Filters>
                                    <c1:ChecklistFilter x:Name="occupationFilter" PropertyName="Occupation" HeaderText="{x:Static p:Resources.Occupation}"/>
                                    <c1:RangeFilter PropertyName="Age" HeaderText="{x:Static p:Resources.Age}" Format="N0" Minimum="0" Maximum="115" UpperValue="70"/>
                                    <c1:NumericFilter PropertyName="Age" HeaderText="{x:Static p:Resources.Age}"  />
                                    <c1:DateRangeFilter PropertyName="DOB" HeaderText="{x:Static p:Resources.DOB}" Minimum="01/01/1950" Maximum="01/01/2100"/>
                                    <c1:FullTextFilter PropertyName="Name" HeaderText="{x:Static p:Resources.Name}"/>
                                    <c1:ThreeStateFilter PropertyName="Male" HeaderText="{x:Static p:Resources.Gender}" TrueLabel="Male" FalseLabel="Female" NullLabel="Unknown"/>
                                </c1:C1DataFilter.Filters>
                            </c1:C1DataFilter>
                            <c1:FlexGrid Grid.Column="1" AutoGenerateColumns="True" x:Name="dataFilterFlexGrid" />
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{x:Static p:Resources.FilterEditor}" BorderThickness="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <c1:C1FilterEditor x:Name="filterEditor" Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" MinHeight="300"/>
                            <c1:FlexGrid x:Name="filterEditorFlexGrid" Grid.Column="1" Grid.Row="0"/>
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{x:Static p:Resources.DataPager}" BorderThickness="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <c1:C1ListView x:Name="listView2" Grid.Row="0" SelectionMode="Single" DisplayMemberPath="Name" Margin="10 0 10 10"/>
                            <c1:C1DataPager x:Name="pager" Grid.Row="1" />
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{x:Static p:Resources.RulesManager}" BorderThickness="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="400"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <c1:C1RulesManager x:Name="rulesManager">
                                <c1:C1RulesEngine>
                                    <c1:RulesEngineExpressionRule Ranges="[DOB]" Expression="IsThisMonth([$Field])">
                                        <c1:RulesEngineStyle Background="{StaticResource SuccessBackground}"/>
                                    </c1:RulesEngineExpressionRule>
                                    <c1:RulesEngineExpressionRule Ranges="[DOB]" Expression="IsLastMonth([$Field])">
                                        <c1:RulesEngineStyle Background="{StaticResource CriticalBackground}"/>
                                    </c1:RulesEngineExpressionRule>
                                    <c1:RulesEngineSegmentsRule Ranges="[Age]">
                                        <c1:RulesEngineSegment Value="50">
                                            <c1:RulesEngineStyle Background="{StaticResource CriticalBackground}"/>
                                        </c1:RulesEngineSegment>
                                        <c1:RulesEngineSegment>
                                            <c1:RulesEngineStyle Background="{StaticResource SuccessBackground}"/>
                                        </c1:RulesEngineSegment>
                                    </c1:RulesEngineSegmentsRule>
                                    <c1:RulesEngineDataBarRule Ranges="[Age]" Color="#FFA8A8F5" IsGradient="True" />
                                    <c1:RulesEngineSegmentsRule Ranges="[Age]">
                                        <c1:RulesEngineSegment ValueType="Percent" Value="0.33">
                                            <c1:RulesEngineStyle IconTemplate="{x:Static c1:C1IconTemplate.TriangleSouth}" Foreground="{StaticResource CriticalForeground}"/>
                                        </c1:RulesEngineSegment>
                                        <c1:RulesEngineSegment ValueType="Percent" Value="0.66">
                                            <c1:RulesEngineStyle IconTemplate="{x:Static c1:C1IconTemplate.TriangleEast}" Foreground="{StaticResource CautionForeground}"/>
                                        </c1:RulesEngineSegment>
                                        <c1:RulesEngineSegment>
                                            <c1:RulesEngineStyle IconTemplate="{x:Static c1:C1IconTemplate.TriangleNorth}" Foreground="{StaticResource SuccessForeground}"/>
                                        </c1:RulesEngineSegment>
                                    </c1:RulesEngineSegmentsRule>
                                </c1:C1RulesEngine>
                            </c1:C1RulesManager>
                            <c1:FlexGrid x:Name="flexGrid2" Grid.Column="1">
                                <i:Interaction.Behaviors>
                                    <c1:ConditionalFormattingBehavior Engine="{Binding ElementName=rulesManager, Path=Engine}"/>
                                </i:Interaction.Behaviors>
                            </c1:FlexGrid>
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{x:Static p:Resources.ExpressionEditor}" BorderThickness="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="500" MaxWidth="800" Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>                            
                            <Grid.RowDefinitions>
                                <RowDefinition MinHeight="60" MaxHeight="100" Height="1*"/>
                                <RowDefinition Height="3*"/>
                            </Grid.RowDefinitions>
                            
                            <c1:C1ExpressionEditor x:Name="expressionEditor" Margin="5" ShowErrorBox="True" >
                                <c1:C1ExpressionEditor.Engine>
                                    <c1:C1ExpressionEngine CurrentIndex="0" Expression="sqrt([Age])" />
                                </c1:C1ExpressionEditor.Engine>
                            </c1:C1ExpressionEditor>

                            <c1:C1ExpressionEditorPanel Grid.Row="1" Margin="5" Editor="{Binding ElementName=expressionEditor}"/>
                        </Grid>
                    </c1:C1TabItem>
                </c1:C1TabControl>
            </c1:C1TabItem>
            <c1:C1TabItem Header="{x:Static p:Resources.DataVisualization}" >
                <local:DataVisualization />
            </c1:C1TabItem>
            <c1:C1TabItem Header="{x:Static p:Resources.InputEditing}" UnselectedContentMode="OutsideVisualTree">
                <local:InputAndEditing x:Name="inputAndEditing" />
            </c1:C1TabItem>
            <c1:C1TabItem Header="{x:Static p:Resources.ReportingDocuments}" >
                <c1:C1TabControl TabStripPlacement="Left" Margin="5" IndicatorPlacement="Right">

                    <!-- C1FlexViewer -->
                    <c1:C1TabItem Header="Flex Viewer" BorderThickness="0">
                        <c1:FlexViewer x:Name="fv" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ZoomMode="PageWidth" 
                                   AllowThumbView="True" OpenButtonVisible="True" OpenAction="fv_OpenAction" />
                    </c1:C1TabItem>
                </c1:C1TabControl>
            </c1:C1TabItem>
            <c1:C1TabItem Header="{x:Static p:Resources.Scheduling}" >
                <c1:C1TabControl TabStripPlacement="Left" Margin="5" IndicatorPlacement="Right" UnselectedContentMode="OutsideVisualTree"  >
                    <c1:C1TabItem Header="Calendar" BorderThickness="0">
                        <c1:C1Calendar SelectionMode="Extended" MaxSelectionCount="21" MinHeight="280" MinWidth="280" Margin="5"
                                   HorizontalAlignment="Left" VerticalAlignment="Top" ShowAdjacentDay="True" />
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="Scheduler" BorderThickness="0">
                        <Grid Margin="10" Name="calendarGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MaxWidth="342" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <c1:C1ToolStrip Grid.ColumnSpan="2" HorizontalAlignment="Stretch">
                                <TextBlock Margin="2" Text="{x:Static p:Resources.SchedulerView}" VerticalAlignment="Center"/>
                                <c1:C1ComboBox x:Name="ViewType" VerticalAlignment="Center"  SelectedItem="{Binding ViewType, ElementName=sched1}"
                                               ItemsSource="{Binding ViewTypeOptions}" Margin="2" MinWidth="120">
                                    <c1:C1ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource ScheduleStringConverter}}"/>
                                        </DataTemplate>
                                    </c1:C1ComboBox.ItemTemplate>
                                </c1:C1ComboBox>
                                <c1:C1CheckBox x:Name="Grouping" Content="{x:Static p:Resources.EnableGrouping}" Checked="Grouping_Checked" Unchecked="Grouping_Unchecked" />
                                <c1:C1CheckBox Content="{x:Static p:Resources.Showweektabs}" IsChecked="{Binding ShowWeekTabs, ElementName=sched1, Mode=TwoWay}" />
                            </c1:C1ToolStrip>
                            <c1:C1MultiMonthCalendar x:Name="cal1" Grid.Column="0" Grid.Row="1" SelectionMode="Extended" MonthCount="3" MaxSelectionCount="42"  
                                       ShowAdjacentDay="True" MonthWidth="310"
                                       SelectedDates="{Binding VisibleDates, ElementName=sched1, Mode=OneWay}"
                                       BoldedDates="{Binding BoldedDates, ElementName=sched1, Mode=OneWay}"/>
                            <c1:C1Scheduler x:Name="sched1" Grid.Column="1" Grid.Row="1">
                                <c1:C1Scheduler.Settings>
                                    <c1:C1SchedulerSettings SetReminder="False" AllowCategoriesMultiSelection="False" AllowCategoriesEditing="False"/>
                                </c1:C1Scheduler.Settings>
                            </c1:C1Scheduler>
                        </Grid>
                    </c1:C1TabItem>
                    <!--GanttView-->
                    <c1:C1TabItem Header="GanttView" BorderThickness="0">
                        <c1:C1GanttView x:Name="ganttPage" Margin="10" StartDate="11/29/2022">
                            <c1:C1GanttView.Columns>
                                <c1gantt:TaskPropertyColumn Property="Mode" Visible="False"/>
                                <c1gantt:TaskPropertyColumn Property="Name" Width="280"/>
                                <c1gantt:TaskPropertyColumn Property="Duration" Visible="False"/>
                                <c1gantt:TaskPropertyColumn Property="DurationUnits" Visible="False"/>
                                <c1gantt:TaskPropertyColumn Property="Start" />
                                <c1gantt:TaskPropertyColumn Property="Finish" />
                                <c1gantt:TaskPropertyColumn Property="PercentComplete" />
                                <c1gantt:TaskPropertyColumn Property="ConstraintType" Visible="False"/>
                                <c1gantt:TaskPropertyColumn Property="ConstraintDate" Visible="False"/>
                                <c1gantt:TaskPropertyColumn Property="Predecessors" Visible="False"/>
                                <c1gantt:TaskPropertyColumn Property="Deadline" Visible="False"/>
                                <c1gantt:TaskPropertyColumn Property="Calendar" Visible="False"/>
                                <c1gantt:TaskPropertyColumn Property="ResourceNames" Visible="False"/>
                                <c1gantt:TaskPropertyColumn Property="Notes" Visible="False"/>
                            </c1:C1GanttView.Columns>
                            <c1:C1GanttView.Tasks>
                                <c1gantt:Task Name="Add GanttView to Themes Sample" Start="11/29/2022" Duration="2" PercentComplete="100">
                                    <c1gantt:Task.ResourceRefs>
                                        <c1gantt:ResourceRef ResourceID="1002" />
                                    </c1gantt:Task.ResourceRefs>
                                </c1gantt:Task>
                                <c1gantt:Task Name="Test all themes" Start="11/29/2022" Duration="2" PercentComplete="50">
                                    <c1gantt:Task.ResourceRefs>
                                        <c1gantt:ResourceRef ResourceID="1002" />
                                    </c1gantt:Task.ResourceRefs>
                                </c1gantt:Task>
                                <c1gantt:Task Name="Toolbar theme support" Start="12/1/2022" Duration="3" PercentComplete="20">
                                    <c1gantt:Task.ResourceRefs>
                                        <c1gantt:ResourceRef ResourceID="1002" />
                                    </c1gantt:Task.ResourceRefs>
                                </c1gantt:Task>
                                <c1gantt:Task Name="GridView and ChartView theme support" Start="12/6/2022" Duration="3" PercentComplete="20">
                                    <c1gantt:Task.ResourceRefs>
                                        <c1gantt:ResourceRef ResourceID="1002" />
                                    </c1gantt:Task.ResourceRefs>
                                </c1gantt:Task>
                                <c1gantt:Task Name="Context Menu theme support" Start="12/9/2022" Duration="2" PercentComplete="60">
                                    <c1gantt:Task.ResourceRefs>
                                        <c1gantt:ResourceRef ResourceID="1002" />
                                        <c1gantt:ResourceRef ResourceID="1001" />
                                    </c1gantt:Task.ResourceRefs>
                                </c1gantt:Task>
                                <c1gantt:Task Name="Dialog theme support" Start="12/12/2022" Duration="7" PercentComplete="40">
                                    <c1gantt:Task.ResourceRefs>
                                        <c1gantt:ResourceRef ResourceID="1002" />
                                        <c1gantt:ResourceRef ResourceID="1001" />
                                    </c1gantt:Task.ResourceRefs>
                                </c1gantt:Task>
                                <c1gantt:Task Name="Code review" Start="11/29/2022" Finish="12/21/2022" PercentComplete="10">
                                    <c1gantt:Task.ResourceRefs>
                                        <c1gantt:ResourceRef ResourceID="1002" />
                                        <c1gantt:ResourceRef ResourceID="1001" />
                                    </c1gantt:Task.ResourceRefs>
                                </c1gantt:Task>
                            </c1:C1GanttView.Tasks>
                            <c1:C1GanttView.TaskResources>
                                <c1gantt:Resource ID="1001" Name="Chris" Cost="1"/>
                                <c1gantt:Resource ID="1002" Name="Lee" Cost="1"/>
                            </c1:C1GanttView.TaskResources>
                        </c1:C1GanttView>
                    </c1:C1TabItem>

                </c1:C1TabControl>
            </c1:C1TabItem>
            <c1:C1TabItem Header="{x:Static p:Resources.NavigationLayout}" >
                <local:NavigationAndLayout />
            </c1:C1TabItem>
            <c1:C1TabItem Header="{x:Static p:Resources.CommonWPFControls}" CanUserPin="True" CanUserClose="True" >
                <TabControl TabStripPlacement="Left" Margin="5" >
                    <TabItem Header="Input" BorderThickness="0">
                        <WrapPanel Margin="10" MaxWidth="800" HorizontalAlignment="Left" >
                            <Label Content="Label" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Button Content="Button" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <ToggleButton Content="ToggleButton" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <RadioButton  Content="RadioButton" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <RadioButton  IsEnabled="False" VerticalAlignment="Center" Width="120" Margin="10 20 10 20" Content="Check Me!" IsChecked="True" />
                            <RadioButton  IsEnabled="False" VerticalAlignment="Center" Width="120" Margin="10 20 10 20" Content="Check Me!"  />
                            <CheckBox Content="CheckBox" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <CheckBox Content="Disabled checked CheckBox" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="True" IsEnabled="False"/>
                            <CheckBox Content="Disabled CheckBox" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" IsChecked="False" IsEnabled="False"/>
                            <TextBox Text="TextBox" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="200" MinHeight="30"/>
                            <ComboBox Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" IsEditable="True" MinWidth="200">
                                <ComboBoxItem Content="Editable Item 1"/>
                                <ComboBoxItem Content="Item 2"/>
                                <ComboBoxItem Content="Item 3"/>
                                <ComboBoxItem Content="Item 4"/>
                            </ComboBox>
                            <ComboBox Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="200">
                                <ComboBoxItem Content="Item 1"/>
                                <ComboBoxItem Content="Item 2"/>
                                <ComboBoxItem Content="Item 3"/>
                                <ComboBoxItem Content="Item 4"/>
                            </ComboBox>
                            <ListBox Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="200" Height="120">
                                <ListBoxItem Content="ListBox Item 1"/>
                                <ListBoxItem Content="ListBox Item 2"/>
                                <ListBoxItem Content="ListBox Item 3"/>
                                <ListBoxItem Content="ListBox Item 4"/>
                                <ListBoxItem Content="ListBox Item 5"/>
                                <ListBoxItem Content="ListBox Item 6"/>
                                <ListBoxItem Content="ListBox Item 7"/>
                            </ListBox>
                            <ListView Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="200" Height="120">
                                <ListView.View>
                                    <GridView>
                                        <GridView.Columns>
                                            <GridViewColumn Header="GridView Column Header" DisplayMemberBinding="{Binding .}" Width="200" />
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                                <ListViewItem Content="ListView Item 1"/>
                                <ListViewItem Content="ListView Item 2"/>
                                <ListViewItem Content="ListView Item 3"/>
                                <ListViewItem Content="ListView Item 4"/>
                                <ListViewItem Content="ListView Item 5"/>
                                <ListViewItem Content="ListView Item 6"/>
                                <ListViewItem Content="ListView Item 7"/>
                                <ListViewItem Content="ListView Item 8"/>
                                <ListViewItem Content="ListView Item 9"/>
                            </ListView>

                            <DatePicker Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="200"/>
                            <Slider Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="200"/>
                            <ProgressBar Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="200" Value="50"/>
                            <Label ToolTip="ToolTip Example" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" MinWidth="200">Put mouse here to see ToolTip</Label>
                            <Menu Margin="10">
                                <MenuItem Header="Menu">
                                    <MenuItem Header="Copy" InputGestureText="Ctrl+C"/>
                                    <MenuItem Header="Cut" InputGestureText="Ctrl+X"/>
                                    <MenuItem Header="Paste" InputGestureText="Ctrl+V"/>
                                </MenuItem>
                            </Menu>
                        </WrapPanel>
                    </TabItem>
                    <!--     <TabItem Header="DataGrid" BorderThickness="0">
                        <DataGrid x:Name="dataGrid" Margin="10" />
                    </TabItem>-->
                    <TabItem Header="Calendar" BorderThickness="0">
                        <Calendar Margin="10" HorizontalAlignment="Left"/>
                    </TabItem>
                    <TabItem Header="RichTextBox &amp; ToolBar" BorderThickness="0">
                        <DockPanel>
                            <ToolBar DockPanel.Dock="Top" >
                                <Button>
                                    <TextBlock FontFamily="Segoe UI Symbol" FontSize="16" Text="&#xE105;" />
                                </Button>
                                <Button>
                                    <TextBlock FontFamily="Segoe UI Symbol" FontSize="16" Text="&#xE106;" />
                                </Button>
                                <CheckBox Content="{x:Static p:Resources.CheckBox}"/>
                                <RadioButton Content="{x:Static p:Resources.RadioButton}"/>
                                <Separator/>
                                <Button Content="{x:Static p:Resources.Button}"/>
                                <ToggleButton Content="{x:Static p:Resources.Togglebutton}"/>
                                <Separator/>
                                <Label Content="{x:Static p:Resources.TextBox}"/>
                                <TextBox Width="100"/>
                            </ToolBar>
                            <RichTextBox>
                                <RichTextBox.Document>
                                    <FlowDocument>
                                        <Paragraph>
                                            What is Lorem Ipsum? Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum.
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox.Document>
                            </RichTextBox>
                        </DockPanel>
                    </TabItem>
                    <TabItem Header="Navigation &amp; Layout" BorderThickness="0">
                        <StackPanel>
                            <Expander Header="{x:Static p:Resources.Expander}" Margin="5" IsExpanded="True">
                                <TextBlock Margin="5" Text="{x:Static p:Resources.Expander_content}"/>
                            </Expander>
                            <GroupBox Header="{x:Static p:Resources.GroupBox}" Margin="5" >
                                <TextBlock Margin="5" Text="{x:Static p:Resources.GroupBox_content}"/>
                            </GroupBox>
                            <!--          <TextBlock Margin="5">TreeView</TextBlock>
                            <TreeView Margin="5">
                                <TreeViewItem Header="Item 1" IsExpanded="True"/>
                                <TreeViewItem Header="WPF Edition" IsExpanded="True">
                                    <TreeViewItem Header="Data Managenment" />
                                    <TreeViewItem Header="Data Visualization" />
                                    <TreeViewItem Header="Input &amp; Editing" />
                                    <TreeViewItem Header="Reporting &amp; Documents" />
                                </TreeViewItem>
                                <TreeViewItem Header="XapOptimizer" IsExpanded="True">
                                    <TreeViewItem Header="Pruning" />
                                    <TreeViewItem Header="Obfuscation" />
                                    <TreeViewItem Header="Strong Signing" />
                                    <TreeViewItem Header="Deploy architecture" />
                                </TreeViewItem>
                            </TreeView>-->
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </c1:C1TabItem>
        </c1:C1TabControl>
    </Grid>
</UserControl>
