<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="TabControlExplorer.Overview" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TabControlExplorer;component/CommonResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border>
        <c1:C1TabControl Grid.Row="1" Name="c1Tab" IndicatorVisibility="Collapsed" TabStripMenuVisibility="Visible" TabItemClose="InEachTab">
            <c1:C1TabItem TabShape="Sloped" Header="Sales Per Month" CanUserPin="True" />
            <c1:C1TabItem TabShape="Sloped" Header="Sales Per Sales Agent" />
            <c1:C1TabItem TabShape="Sloped" Header="Sales Agents" />
            <c1:C1TabItem TabShape="Sloped" Header="Report Summary" CanUserPin="True" />
        </c1:C1TabControl>
    </Border>
</UserControl>