                <ComboBoxItem Content="One" />
                <ComboBoxItem Content="Collapsible" />
                <ComboBoxItem Content="Any" />
            </ComboBox>
            <CheckBox Content="Fill" IsChecked="{Binding Fill,ElementName=accordion}" Margin="4"/>
