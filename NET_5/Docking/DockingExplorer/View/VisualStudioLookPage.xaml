                        </Grid>
                        <Border x:Name="DisabledVisualElement" Style="{StaticResource DisabledStyle}" />
                    </Grid>
                    <Border Padding="15 0 0 0" Grid.Row="1">
                        <ItemsPresenter x:Name="ChildrenPanel" Margin="-1,0,0,0" />
                    </Border>
                </Grid>
