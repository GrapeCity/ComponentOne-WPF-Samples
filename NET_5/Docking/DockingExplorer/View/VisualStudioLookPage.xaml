                        <Border x:Name="MouseOverElement" Style="{StaticResource TreeViewMouseOverStyle}" />
                        <Border x:Name="FocusVisualElement" Style="{StaticResource TreeViewSelectedStyle}" />
                        <Grid Background="{TemplateBinding Background}" Margin="5 0 5 0 " Grid.Column="1">
