<UserControl x:Class="FlexGridExplorer.CustomFilters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FlexGridExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <c1:ColorConverter x:Key="colorConverter"/>

        <Style TargetType="local:MapFilterPresenter">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:MapFilterPresenter">
                        <ItemsPresenter Margin="5" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="local:ModelFilterPresenter">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:ModelFilterPresenter">
                        <ItemsPresenter Margin="5" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="local:TransmissionFilterPresenter">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:TransmissionFilterPresenter">
                        <ItemsPresenter Margin="5" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="local:ColorFilterPresenter">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:ColorFilterPresenter">
                        <ItemsPresenter Margin="5" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="CheckBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid>
                                    <Ellipse Fill="{Binding Path=Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CheckBox}}" Width="30" Height="30" Margin="0 5 10 5"/>
                                    <Path Height="18" Width="18" Fill="White" Stretch="UniformToFill" VerticalAlignment="Center" Margin="-10 0 0 0"
                                      Data="M3.1039878E-06,5.9149554 L2.6090951,5.1227895 L3.8818195,7.1946091 C3.8818195,7.1946091 9.7088028,6.9388943E-17 9.7088028,6.9388943E-17 C9.7088028,6.9388943E-17 10.499998,0.11624356 10.499998,0.11624356 C10.499998,0.11624356 4.1827894,10.1161 4.1827894,10.1161 z">
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=IsChecked, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=CheckBox}}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                    </Path>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>
    <Grid>
        <c1:FlexGrid x:Name="grid" AutoGenerateColumns="False" IsReadOnly="True">
            <c1:FlexGrid.Columns>
                <c1:GridColumn Header="Store" Binding="Store.ID" AllowGrouping="True" FilterLoading="OnStoreFilterLoading" />
                <c1:GridColumn Header="Model" Binding="Car.Model" Width="*" FilterLoading="OnModelFilterLoading"/>
                <c1:GridColumn Header="Price" Binding="Car.Price" FilterLoading="OnPriceFilterLoading"/>
                <c1:GridColumn Header="Automatic transmission" Binding="Car.TransmissAutomatic" AllowGrouping="True" FilterLoading="OnTransmissionFilterLoading"/>
                <c1:GridColumn Binding="Color" FilterLoading="OnColorFilterLoading">
                    <c1:GridColumn.CellTemplate>
                        <DataTemplate>
                            <Rectangle Width="20" Height="20" Fill="{Binding Color,Converter={StaticResource colorConverter}}"/>
                        </DataTemplate>
                    </c1:GridColumn.CellTemplate>
                </c1:GridColumn>
            </c1:FlexGrid.Columns>
            <!--<c1:FlexGrid.Rows>
                <c1:GridFilterRow AutoComplete="True" />
            </c1:FlexGrid.Rows>-->
        </c1:FlexGrid>
    </Grid>
</UserControl>
