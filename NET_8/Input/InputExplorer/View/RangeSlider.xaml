<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="InputExplorer.RangeSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml">
    <Grid>
        <ScrollViewer>
            <c1:C1WrapPanel>
                <c1:C1RangeSlider Width="160" Margin="10 20 10 20" Height="20" LowerValue="20" UpperValue="80" />
                <c1:C1RangeSlider Orientation="Vertical" Height="120" Margin="30 20 10 20" LowerValue="20" UpperValue="80"/>
            </c1:C1WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>