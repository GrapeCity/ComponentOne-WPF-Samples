<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" 
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="av" 
             x:Class="InputExplorer.StopsSlider">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <c1:C1StopsSlider x:Name="stops" Width="300" Minimum="10" Maximum="20" StopsChanged="OnStopsChanged">
                <c1:C1StopsSlider.Stops>
                    <c1:StopValue Value="11"/>
                    <c1:StopValue Value="17"/>
                    <c1:StopValue Value="19"/>
                </c1:C1StopsSlider.Stops>
            </c1:C1StopsSlider>
            <TextBlock x:Name="label" Text="0 - 1" TextAlignment="Center" Margin="8 0"/>
        </StackPanel>
    </Grid>
</UserControl>