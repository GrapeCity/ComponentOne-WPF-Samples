<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="MapsExplorer.Marks" MaxHeight="500" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:res="clr-namespace:MapsExplorer.Properties"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml">
    <Grid x:Name="LayoutRoot">
    <Grid.RowDefinitions>  
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>
		<Border Padding="5" Margin="0,0,0,10" CornerRadius="2">
            <TextBlock TextWrapping="Wrap" Margin="5" Text="{x:Static res:Resources.MarksDemoDescription}" />
		</Border>
    <Border Grid.Row="1" BorderBrush="#FF8FB4CC" BorderThickness="3">
            <c1:C1Maps x:Name="maps" Zoom="1" >
                <c1:C1Maps.Source>
                    <c1:OpenStreetMapTileSource />
                </c1:C1Maps.Source>
            </c1:C1Maps>
    </Border>
  </Grid>
</UserControl>