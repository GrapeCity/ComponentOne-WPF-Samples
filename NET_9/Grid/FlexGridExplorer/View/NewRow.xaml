<UserControl x:Class="FlexGridExplorer.NewRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:res="clr-namespace:FlexGridExplorer.Resources">
    <c1:FlexGrid x:Name="grid" NewRowPosition="Bottom" FrozenBottomRows="1" HorizontalScrollBarVisibility="Visible" NewRowPlaceholder="{x:Static res:AppResources.NewRowPlaceholder}" AllowDragging="Both" SelectionMode="ListBox" HeadersVisibility="All" RowEditEnding="OnRowEditEnding"/>
</UserControl>
