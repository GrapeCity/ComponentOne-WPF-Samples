<UserControl x:Class="FlexGridExplorer.CustomCells"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FlexGridExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <c1:C1IconTemplate x:Key="ExpandedIconTemplate">
            <c1:C1BitmapIcon Source="../Images/Expanded.png" Width="9" Height="9"/>
        </c1:C1IconTemplate>
        <c1:C1IconTemplate x:Key="CollapsedIconTemplate">
            <c1:C1BitmapIcon Source="../Images/Collapsed.png" Width="9" Height="9"/>
        </c1:C1IconTemplate>
        <local:FirstCharConverter x:Key="FirstCharConverter"/>
    </UserControl.Resources>

    <Grid Background="White">
        <!-- show songs in a FlexGrid -->
        <c1:FlexGrid x:Name="_flexiTunes" Grid.Row="2"
                     ShowOutlineBar="True"
                     HeadersVisibility="Column"
                     GridLinesVisibility="None"
                     Background="White"
                     RowBackground="White"
                     AlternatingRowBackground="White"
                     GroupRowBackground="White"
                     MinColumnWidth="30"
                     DefaultRowHeight="24"
                     DefaultGroupRowHeight="24"
                     DefaultColumnHeaderRowHeight="24"
                     CellPadding="4"
                     SelectionBackground="#a0eaeff4"
                     CursorBackground="#ffeaeff4"
                     AutoGenerateColumns="False"
                     TreeLinesMode="Connected"
                     TreeLinesDashArray="1 2"
                     GroupExpandedIconTemplate="{StaticResource ExpandedIconTemplate}"
                     GroupCollapsedIconTemplate="{StaticResource CollapsedIconTemplate}">
            <c1:FlexGrid.CellFactory>
                <local:MusicCellFactory>
                    <local:MusicCellFactory.ArtistIcon>
                        <c1:C1IconTemplate>
                            <c1:C1BitmapIcon Source="../Images/Artist.png"/>
                        </c1:C1IconTemplate>
                    </local:MusicCellFactory.ArtistIcon>
                    <local:MusicCellFactory.AlbumIcon>
                        <c1:C1IconTemplate>
                            <c1:C1BitmapIcon Source="../Images/Album.png"/>
                        </c1:C1IconTemplate>
                    </local:MusicCellFactory.AlbumIcon>
                    <local:MusicCellFactory.SongIcon>
                        <c1:C1IconTemplate>
                            <c1:C1BitmapIcon Source="../Images/Song.png"/>
                        </c1:C1IconTemplate>
                    </local:MusicCellFactory.SongIcon>
                </local:MusicCellFactory>
            </c1:FlexGrid.CellFactory>
            <c1:FlexGrid.Columns>
                <c1:GridColumn Binding="Name" Header="Title" AllowDragging="False" Width="300" />
                <c1:GridColumn Binding="Duration" HorizontalAlignment="Right" AllowFiltering="False" IsReadOnly="True" />
                <c1:GridColumn Binding="Size" HorizontalAlignment="Right" IsReadOnly="True"/>
                <c1:GridColumn Binding="Rating" HorizontalAlignment="Left" Width="200" Aggregate="Average" IsReadOnly="True"/>
            </c1:FlexGrid.Columns>
            <c1:FlexGrid.ScrollTipStyle>
                <Style TargetType="ToolTip">
                    <Setter Property="Background" Value="DarkRed"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="Yellow"/>
                </Style>
            </c1:FlexGrid.ScrollTipStyle>
            <c1:FlexGrid.ScrollTipTemplate>
                <DataTemplate>
                    <Grid MaxWidth="300">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock FontSize="38" Text="{Binding Artist,Converter={StaticResource FirstCharConverter}}" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Artist}" Grid.Column="1" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="4 0 0 0" />
                    </Grid>
                </DataTemplate>
            </c1:FlexGrid.ScrollTipTemplate>
        </c1:FlexGrid>
    </Grid>
</UserControl>
