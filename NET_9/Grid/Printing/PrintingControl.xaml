            </c1:C1CompositeIcon>
        </c1:C1IconTemplate>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <c1:C1ToolStrip Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top" ToolLabelVisibility="Visible">
            <c1:C1ButtonTool Label="{x:Static resx:Resources.PrintBasicTitle}" IconTemplate="{StaticResource PrintIcon}" Click="_btnBasicPrint_Click" />
            <c1:C1ButtonTool Label="{x:Static resx:Resources.PrintAdvancedTitle}" IconTemplate="{StaticResource PrintIcon}" Click="_btnAdvancedPrint_Click" />
        </c1:C1ToolStrip>

        <c1:FlexGrid x:Name="_flex" Grid.Row="1" Grid.Column="1"
                     ShowMarquee="True" IsReadOnly="True" SelectionMode="CellRange"
                     AllowMerging="None" AutoGenerateColumns="False">
            <c1:FlexGrid.Columns>
                <c1:GridColumn Binding="Name" />
                <c1:GridColumn Binding="Line" />
                <c1:GridColumn Binding="Color" />
                <c1:GridColumn Binding="Price" Format="n2" HorizontalAlignment="Right" />
                <c1:GridColumn Binding="Weight" Format="n2" HorizontalAlignment="Right" />
                <c1:GridColumn Binding="Cost" Format="n2" HorizontalAlignment="Right" />
                <c1:GridColumn Binding="Volume" Format="n2" HorizontalAlignment="Right" />
                <c1:GridColumn Binding="Rating" Header="Rating" HorizontalAlignment="Right" Width="110">
                    <c1:GridColumn.CellTemplate>
                        <DataTemplate>
                            <printing:RatingControl Rating="{Binding Rating}" />
                        </DataTemplate>
                    </c1:GridColumn.CellTemplate>
                </c1:GridColumn>
                <c1:GridColumn Binding="Discontinued" />
            </c1:FlexGrid.Columns>
        </c1:FlexGrid>

        <c1:C1Expander Header="{x:Static resx:Resources.SettingTitle}" ExpandDirection="Left" ExpandIconAlignment="Left" BorderThickness="0" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <GroupBox Header="{x:Static resx:Resources.ParameterTitle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="32"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <c1:C1CheckBox x:Name="_chkShowPrintDialog" Content="{x:Static resx:Resources.ShowPrintDialog}" VerticalAlignment="Center"
                                       IsChecked="True" Grid.ColumnSpan="2" Margin="2" IsThreeState="False" />
                        <TextBlock Text="{x:Static resx:Resources.Zoom}" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" />
                        <c1:C1ComboBox x:Name="_cmbZoom" SelectedIndex="0" Width="100" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
                            <c1:C1ComboBoxItem Content="{x:Static resx:Resources.ActualSize}" />
                            <c1:C1ComboBoxItem Content="{x:Static resx:Resources.PageWidth}" />
                            <c1:C1ComboBoxItem Content="{x:Static resx:Resources.SinglePage}" />
                            <c1:C1ComboBoxItem Content="{x:Static resx:Resources.Selection}" />
                        </c1:C1ComboBox>

                        <TextBlock Text="{x:Static resx:Resources.Margins}" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" />
                        <c1:C1ComboBox x:Name="_cmbMargins" SelectedIndex="2" Grid.Column="1" Grid.Row="2" Width="100" VerticalAlignment="Center">
                            <c1:C1ComboBoxItem Content="{x:Static resx:Resources.Margin025}" />
                            <c1:C1ComboBoxItem Content="{x:Static resx:Resources.Margin05}" />
                            <c1:C1ComboBoxItem Content="{x:Static resx:Resources.Margin1}" />
                        </c1:C1ComboBox>

                        <TextBlock Text="{x:Static resx:Resources.Orientation}" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        <c1:C1ComboBox x:Name="_cmbOrientation" SelectedIndex="0" Width="100" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center">
                            <c1:C1ComboBoxItem Content="{x:Static resx:Resources.DefaultOrientation}" />
                            <c1:C1ComboBoxItem Content="{x:Static resx:Resources.PortraitOrientation}" />
                            <c1:C1ComboBoxItem Content="{x:Static resx:Resources.LandscapeOrientation}" />
                        </c1:C1ComboBox>

                        <c1:C1CheckBox x:Name="_chkPrintPreview" Content="{x:Static resx:Resources.PrintPreview}" VerticalAlignment="Center"
                                       IsChecked="True" Grid.ColumnSpan="2" Grid.Row="4" Margin="2" IsThreeState="False"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="{x:Static resx:Resources.FlexGridSetting}" Grid.Row="1">
                    <StackPanel>
                        <c1:C1CheckBox x:Name="_chkMerge" Content="{x:Static resx:Resources.MergeClick}" Click="_chkMerge_Click" Margin="4" />
                        <c1:C1CheckBox x:Name="_chkFreeze" Content="{x:Static resx:Resources.FreezeClick}" Click="_chkFreeze_Click" Margin="4" />
                    </StackPanel>
                </GroupBox>
            </Grid>
        </c1:C1Expander>
    </Grid>
</UserControl>