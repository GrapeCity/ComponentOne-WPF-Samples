<Window x:Class="CustomLocalization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CustomLocalization"
        Title="ComponentOne | WPF Custom Localization" Height="600" Width="1024" >
    <Grid x:Name="LayoutRoot" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="2" Margin="0 2 0 2" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock Text="Pick Language:" />
            <ComboBox x:Name="localizationCombo" Margin="0 2 0 0" Width="170" Height="25" />
        </StackPanel>
        
        <c1:C1DockControl Grid.Row="1">
            <c1:C1DockTabControl SelectedIndex="0">
                <c1:C1DockTabItem Header="Scheduler" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MaxWidth="310" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <c1:C1MultiMonthCalendar x:Name="cal1" Grid.Column="0" SelectionMode="Extended" MonthCount="3" MaxSelectionCount="42"  
                                           ShowAdjacentDay="True" MonthWidth="290" Margin="-5" Padding="0"
                                           SelectedDates="{Binding VisibleDates, ElementName=sched1, Mode=OneWay}"
                                           BoldedDates="{Binding BoldedDates, ElementName=sched1, Mode=OneWay}"/>
                        <c1:C1Scheduler x:Name="sched1" Grid.Column="1" >
                            <c1:C1Scheduler.Settings>
                                <c1:C1SchedulerSettings SetReminder="False" AllowCategoriesMultiSelection="False" AllowCategoriesEditing="False"/>
                            </c1:C1Scheduler.Settings>
                        </c1:C1Scheduler>
                    </Grid>
                </c1:C1DockTabItem>
            </c1:C1DockTabControl>
            <c1:C1DockTabControl Dock="Right" SelectedIndex="0" DockMinWidth="320">
                <c1:C1DockTabItem Header="FlexGrid" >
                    <c1:FlexGrid x:Name="flexGrid"/>
                </c1:C1DockTabItem>
            </c1:C1DockTabControl>
        </c1:C1DockControl>
    </Grid>
</Window>
