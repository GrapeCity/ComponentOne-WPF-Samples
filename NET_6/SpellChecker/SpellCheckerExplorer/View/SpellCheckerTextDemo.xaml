        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- title -->
            <RowDefinition Height="Auto" />
            <!-- buttons -->
            <RowDefinition Height="*"/>
            <!-- textBoxes -->
            <RowDefinition Height="80"/>
            <!-- textBoxOut -->
        </Grid.RowDefinitions>

