                <c1:C1ButtonTool.IconTemplate>
                    <c1:C1IconTemplate>
                        <c1:C1BitmapIcon Source="../Resources/batchcheck.png"/>
                    </c1:C1IconTemplate>
                </c1:C1ButtonTool.IconTemplate>
            </c1:C1ButtonTool>
