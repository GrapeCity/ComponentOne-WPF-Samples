<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ListViewExplorer.Grouping"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:resources="clr-namespace:ListViewExplorer.Resources" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml">

    <UserControl.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <TextBlock Text="{Binding Name}" Margin="10 0 0 0"/>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
            <c1:C1Button Content="{x:Static resources:AppResources.GroupByBorn}" Click="Button_Click" Padding="10 3 10 3"/>
            <c1:C1Button Content="{x:Static resources:AppResources.GroupByResident}" Click="Button_Click_1" Margin="30 0 0 0" Padding="10 3 10 3"/>
        </StackPanel>

        <c1:C1ListView Grid.Row="1" x:Name="listView" SelectionMode="Single" Margin="10 0 10 10"
                       ItemHeight="30" SelectedBackground="#99c9ef" ItemTemplate="{StaticResource ItemTemplate}">
            <c1:C1ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold" FontSize="19" Text="{Binding Group}" Height="35"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </c1:C1ListView.GroupStyle>
        </c1:C1ListView>
    </Grid>
</UserControl>