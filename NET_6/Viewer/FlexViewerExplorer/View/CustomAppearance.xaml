                                    <ScaleTransform ScaleX="0.6" ScaleY="0.7"/>
                                </Path.RenderTransform>
                            </Path>
                        </Canvas>
                    </Canvas>
                </Viewbox>
            </Button>
            <TextBlock
                                Text="Page"
                                FontSize="13"
                                VerticalAlignment="Center"
                                Margin="3,2,2,2"
                                />
            <c1:C1TextBox
                                x:Name="PageNumberTextBox"
                                TextAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="13"
                                Height="26"
                                Width="43"
                                Margin="2 2 2 2"
                                Padding="2 3 2 1"
                                BorderBrush="#FFB0B0B0"
                                />
            <TextBlock
                                Text="/"
                                FontSize="13"
                                VerticalAlignment="Center"
                                Margin="2,2,2,2" HorizontalAlignment="Center"
                                />
            <TextBlock
                                x:Name="PageCountText"
                                FontSize="13"
                                VerticalAlignment="Center"
                                Margin="2,2,2,2"
                                />
