<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ReportViewer.MainWindow" Title="C1ReportViewer" Height="350" Width="525" WindowStartupLocation="CenterScreen" FontFamily="Segoe UI" FontSize="13" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Select a PDF or HTML file, then print/preview/save with the C1ReportViewer." VerticalAlignment="Center" Margin="4 0" />
            <Button Grid.Column="1" Content="Load..." Padding="4 2" Click="Button_Click" />
                
        </Grid>

        <c1:C1ReportViewer x:Name="_c1RptViewer" Grid.Row="1" />
        
    </Grid>
</Window>