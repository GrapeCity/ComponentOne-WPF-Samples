<UserControl x:Class="ChartSamples.TrendLineEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:"
>
    <Grid x:Name="LayoutRoot" >
    <StackPanel Orientation="Horizontal">
      <StackPanel Margin="4" Orientation="Horizontal" VerticalAlignment="Center">
        <TextBlock Margin="4" Text="Fit:" VerticalAlignment="Center" />
        <ComboBox Margin="4" x:Name="cbFit" Width="100" Height="20" VerticalAlignment="Center" SelectionChanged="cbFit_SelectionChanged" />
      </StackPanel>
      <StackPanel Margin="4" x:Name="hOrder" Orientation="Horizontal">
        <TextBlock Margin="4"  Text="Order:" VerticalAlignment="Center" />
        <c1:C1NumericBox Margin="4" x:Name="nbOrder" Height="20" VerticalAlignment="Center" Width="36" Minimum="2" Maximum="10" Value="2" ValueChanged="nbOrder_ValueChanged" />
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>
