<UserControl x:Class="ChartSamples.MovingAverageEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:"
    >
	<UserControl.Resources>
		<SolidColorBrush x:Key="CE_SampleForeground" Color="#FFF0F8FE"/>
	</UserControl.Resources>
    <Grid x:Name="LayoutRoot" >
    <StackPanel Orientation="Horizontal">
      <StackPanel x:Name="hPeriod" Orientation="Horizontal">
        <TextBlock Text="Period:" VerticalAlignment="Center" Foreground="{StaticResource CE_SampleForeground}" />
        <c1:C1NumericBox x:Name="nbPeriod" Width="60" Minimum="2" Maximum="1000" ValueChanged="nbPeriod_ValueChanged" />
      </StackPanel>
    </StackPanel>
    </Grid>
</UserControl>
