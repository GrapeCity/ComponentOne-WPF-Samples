<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ChartSamples.AggregateChart" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:c1="clr-namespace:C1.WPF;assembly=C1.WPF.4.5.2" xmlns:c1chart="clr-namespace:C1.WPF.C1Chart;assembly=C1.WPF.C1Chart.4.5.2" xmlns:local="clr-namespace:ChartSamples">
    <UserControl.Resources>
        
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 10">
                <TextBlock Margin="0,0,4,0" VerticalAlignment="Center" Text="Aggregate:" />
                <ComboBox Margin="4,0,0,0" VerticalAlignment="Center" x:Name="cb" Width="144" />
            </StackPanel>
        </Border>
        <c1chart:C1Chart x:Name="chart" Grid.Row="1">
            <c1chart:C1Chart.Resources>
                <local:AxisLabelConverter x:Key="al_cnv" />
                <DataTemplate x:Key="al_tmpl">
                    <Image Stretch="None" Width="48" Height="48" Source="{Binding Converter={StaticResource al_cnv},Path=DataObject}" />
                </DataTemplate>
            </c1chart:C1Chart.Resources>
        </c1chart:C1Chart>
    </Grid>
</UserControl>