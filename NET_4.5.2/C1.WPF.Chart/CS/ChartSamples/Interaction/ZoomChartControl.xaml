<?xml version="1.0" encoding="utf-8"?>
<UserControl mc:Ignorable="d" x:Class="ChartSamples.ZoomChartControl" FontSize="9" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:c1chart="clr-namespace:C1.WPF.C1Chart;assembly=C1.WPF.C1Chart.4.5.2" xmlns:c1="clr-namespace:C1.WPF;assembly=C1.WPF.4.5.2" xmlns:local="clr-namespace:ChartSamples" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="3*" />
    </Grid.RowDefinitions>

    <!-- full chart -->
    <c1chart:C1Chart x:Name="chart" Margin="0" Padding="0">
      <c1chart:C1Chart.View>
        <c1chart:ChartView Margin="40,10,30,20" />
      </c1chart:C1Chart.View>
    </c1chart:C1Chart>

    <!-- slider over full chart -->
    <local:ChartSlider x:Name="slider" Minimum="0" Maximum="1" ValueChange="0.1" UpperValue="0.25" LowerValueChanged="slider_LowerValueChanged" UpperValueChanged="slider_UpperValueChanged" />

    <!-- legend below full chart -->
    <c1chart:C1ChartLegend x:Name="legend" Grid.Row="1" Orientation="Horizontal" />

    <!-- zoomed chart below legend -->
    <c1chart:C1Chart x:Name="chartZoom" Margin="0" Padding="0" Grid.Row="2">
      <c1chart:C1Chart.View>
        <c1chart:ChartView Margin="40,10,30,20" />
      </c1chart:C1Chart.View>
    </c1chart:C1Chart>

  </Grid>
</UserControl>