<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InputSamples"
        xmlns:res="clr-namespace:InputSamples.Strings"
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" x:Class="InputSamples.MainWindow"
        mc:Ignorable="d"
        Title="{x:Static res:Resources.Title}" Height="600" Width="800">
    <Grid>
        <c1:C1TabControl Margin="8">
            <c1:C1TabItem Header="{x:Static res:Resources.MultiSelectTabHeader}">
                <local:C1MultiSelectPage />
            </c1:C1TabItem>
            <c1:C1TabItem Header="{x:Static res:Resources.CheckListTabHeader}">
                <local:C1CheckListPage />
            </c1:C1TabItem>
            <c1:C1TabItem Header="{x:Static res:Resources.TagEditorTabHeader}">
                <local:C1TagEditorPage />
            </c1:C1TabItem>
        </c1:C1TabControl>
    </Grid>
</Window>
