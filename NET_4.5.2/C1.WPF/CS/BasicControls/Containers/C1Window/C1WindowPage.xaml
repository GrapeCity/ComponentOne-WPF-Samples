<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="BasicControls.DemoWindow" Name="root" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/BasicControls.4;component/CommonResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Grid.Row="1">
        <StackPanel x:Name="LayoutRoot" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Show Window..." Click="CreateWindow_Click" Margin="4" />
            <Button Content="Show Modal Window..." Click="CreateModal_Click" Margin="4" />
        </StackPanel>
    </Border>
</UserControl>