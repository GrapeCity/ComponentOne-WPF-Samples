            <SolidColorBrush x:Key="IconLightBlueBackground" Color="#FF31604f"/>

            <SolidColorBrush x:Key="IconGrayBackground" Color="#FF8A9297"/>

            <Style TargetType="local:TileControl">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="local:TileControl">
                            <Grid Margin="0 0 10 10">
                                <!-- bind Content to the Title property, so it can be used in the IconTemplate -->
                                <ContentControl ContentTemplate="{TemplateBinding IconTemplate}" Content="{TemplateBinding Title}" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

