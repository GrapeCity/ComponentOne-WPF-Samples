                                            </Border.RenderTransform>
                                            <!-- <UIElement.Clip>
                                        <RectangleGeometry Rect="{Binding BorderThickness, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource tabItemBorderClipConverter}}" />
                                    </UIElement.Clip>-->
                                        </Border>
                                    </Grid>

                                    <!-- Middle Element -->
