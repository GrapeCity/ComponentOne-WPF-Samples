                                                <RowDefinition Height="7"/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.RowSpan="2"                                   
                                        Background="{TemplateBinding Background}"/>
                                            <Border BorderBrush="{TemplateBinding BorderBrush}"/>
