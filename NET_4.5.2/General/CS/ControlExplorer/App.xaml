                    </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush">
                    <Setter.Value>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFFA64B" Offset="0"/>
                            <GradientStop Color="#FFFF8723" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
