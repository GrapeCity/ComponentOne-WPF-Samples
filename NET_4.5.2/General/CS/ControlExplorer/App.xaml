                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1 1 0 0"/>
                                    <Grid x:Name="rightRectangle" Grid.Column="2" Visibility="Collapsed" Width="8">
                                        <Path Data="M2.3841858E-07,0 L1,0 L1,1 L2,1 L2,2 L3,2 L3,3 L4,3 L4,4 L5,4 L5,5 L6,5 L6,6 L7,6 L7,7 L8,7 L8,8 L0,8 L0,7 L2.3841858E-07,6 L2.3841858E-07,5 L2.3841858E-07,4 L2.3841858E-07,3 L2.3841858E-07,2 z" Fill="{TemplateBinding Background}" Height="8" Stretch="Uniform" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="0" VerticalAlignment="Top" />
                                        <Path Data="M6,6 L7,6 L7,7 L6,7 z M4,4 L5,4 L5,5 L6,5 L6,6 L5,6 L5,5 L4,5 z M1,1 L2,1 L2,2 L3,2 L3,3 L4,3 L4,4 L3,4 L3,3 L2,3 L2,2 L1,2 z M0,0 L1,0 L1,1 L0,1 z" Fill="{TemplateBinding BorderBrush}" Height="7" Margin="0,0,1,0" Stretch="Uniform" StrokeThickness="0" VerticalAlignment="Top" Width="7" />
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,0,1,0" Margin="0,7,0,0" Background="{TemplateBinding Background}"/>
