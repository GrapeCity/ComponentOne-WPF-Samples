                                       DropDownWidth="{TemplateBinding Width}"
                                       VerticalAlignment="Top" ShowButton="False"
                                       IsDropDownOpen="{Binding ShowSearchList, Mode=TwoWay}" 
                                       AutoClose="True" HeaderFontFamily="Segoe UI SemiLight" 
                                       HeaderFontSize="12" HeaderForeground="#FFABABAB" 
                                       Background="White" HeaderBackground="White" Padding="0">
