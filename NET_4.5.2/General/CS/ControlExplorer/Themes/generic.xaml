                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="local:ControlNavigator">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ControlNavigator">
                    <Grid x:Name="Root" Background="{TemplateBinding Background}">
                        <TextBlock x:Name="Header" Text="{TemplateBinding Text}" VerticalAlignment="Center" FontSize="{TemplateBinding FontSize}" />
                        <Popup x:Name="DropDown" HorizontalAlignment="Left" IsOpen="False" Placement="Relative" VerticalOffset="40" HorizontalOffset="0" PlacementTarget="{Binding ElementName=Root}">
                            <Border Background="#FFF1F5F6" BorderBrush="#FFBBBBBB" BorderThickness="1">
                                <ScrollViewer x:Name="ScrollViewer" Style="{StaticResource GralScrollViewer}" MaxHeight="400">
                                    <ItemsControl ItemsSource="{TemplateBinding Groups}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Name}" Margin="0 15" FontSize="15" FontWeight="Bold" Foreground="Black"/>
                                                    <ItemsControl ItemsSource="{Binding Controls}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <local:HyperlinkButton NavigateUri="{Binding Link}" FontSize="13" Margin="0 2" Foreground="Black" Content="{Binding Name}" />
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="local:PageFrame">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PageFrame">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.Resources>
                            <Storyboard x:Name="LoadStoryboard" x:Key="LoadStoryboard">
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.Y)" Storyboard.TargetName="Header">
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.Y)" Storyboard.TargetName="Header">
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="hyperlinkButton">
                                    <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Search">
                                    <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="Header">
                                    <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="10"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </Grid.Resources>
                        <Border Grid.Column="1" Grid.Row="1" Margin="-5" BorderBrush="#02000000" BorderThickness="1" CornerRadius="4" >
                            <Border BorderBrush="#0A000000" BorderThickness="1" CornerRadius="3" >
                                <Border BorderBrush="#14000000" BorderThickness="1" CornerRadius="2" >
                                    <Border BorderBrush="#1E000000" BorderThickness="1" CornerRadius="1" >
                                        <Border BorderBrush="#26000000" BorderThickness="1" >
                                            <Border>
                                                <Border.Background>
                                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                                        <GradientStop Color="#B2FFFFFF" Offset="0"/>
                                                        <GradientStop Color="#99FFFFFF" Offset="0.07"/>
                                                        <GradientStop Color="#99FFFFFF" Offset="0.93"/>
                                                        <GradientStop Color="#B2FFFFFF" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>
                                        </Border>
                                    </Border>
                                </Border>
                            </Border>
                        </Border>

                        <Grid x:Name="LayoutRoot">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--Header-->
                            <Grid x:Name="Header" RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform Y="-23.5"/>
                                        <!--<ScaleTransform ScaleY="0.001"/>-->
                                    </TransformGroup>
                                </Grid.RenderTransform>
                                <Grid.Background>
                                    <ImageBrush ImageSource="/Resources/homeHeader.jpg" Stretch="Fill"  AlignmentY="Bottom" />
                                </Grid.Background>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <!--Search-->
                                <local:SearchControl x:Name="Search" HorizontalAlignment="Right" Margin="0,12,45,12" Width="250" Grid.Column="1"/>

                                <!--Breadcrumb-->
                                <StackPanel Orientation="Horizontal" Margin="34,0,0,0">
                                    <c1:C1HyperlinkButton x:Name="hyperlinkButton" NavigateUri="/Views/HomePage.xaml" ToolTipService.ToolTip="Home" Style="{StaticResource BreadcrumbHyperlink}">
                                        <Image Source="/Resources/ico-Home.png" Width="48" Height="48"/>
                                    </c1:C1HyperlinkButton>
                                </StackPanel>
                            </Grid>
                            <!--Content-->
                            <ContentPresenter x:Name="Content" Grid.Row="1"/>
                            <!--Footer-->
                            <Image Height="5" Grid.Row="2" Source="/Resources/homeFooter.png" Stretch="Fill" Width="1124"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <SolidColorBrush x:Key="IconDarkBlueBackground" Color="#FF192329"/>
    <SolidColorBrush x:Key="IconLightBlueBackground" Color="#FF234758"/>

    <Style TargetType="local:TileControl">
        <Setter Property="Background" Value="{StaticResource IconLightBlueBackground}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:TileControl">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ContentControl ContentTemplate="{TemplateBinding IconTemplate}" Width="{TemplateBinding IconWidth}" Height="{TemplateBinding IconHeight}"/>
                        <TextBlock Text="{TemplateBinding Title}" Grid.Row="1" TextAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:C1FacebookShareButton">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="0,7,0,0"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="Foreground" Value="#FF1D4088"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:C1FacebookShareButton">
                    <Grid Cursor="{TemplateBinding Cursor}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver" >
                                    <Storyboard>
                                        <ColorAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="border" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)">
                                            <EasingColorKeyFrame KeyTime="00:00:00" Value="#FF546EA6"/>
                                        </ColorAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed" />
                                <VisualState x:Name="Disabled" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused" />
                                <VisualState x:Name="Unfocused"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="border" Margin="{TemplateBinding Padding}"
                                Background="#FF3B5998" CornerRadius="1" BorderBrush="#FF4C6BAD" BorderThickness="{TemplateBinding BorderThickness}" Width="20">
                            <TextBlock>
                                <Hyperlink x:Name="Hyperlink" TextDecorations="{x:Null}" >
                                    <Grid d:LayoutOverrides="Width">
                                        <Rectangle Fill="#FF6D84B4" Height="3" Margin="1,0,1,1" StrokeThickness="2" VerticalAlignment="Bottom"/>
                                        <Path Data="M6,0 L9,0 L9,2.9999998 L6.4996462,2.9999998 C6.2409444,3.0000005 6.0281658,3.1967285 6.0025792,3.4488282 L6.0000005,3.4999225 L6.0000005,6 L9,6 L9,9 L6,9 L6,12.000001 L6,15 L6,16 L3.0000002,16 L3.0000002,15 L2.9999998,9 L0,9 L0,6 L2.9999998,6 L2.9999998,3 L3.0039034,2.8456204 C3.0842531,1.2605108 4.3949223,5.5690919E-08 6,0 z" 
                                              Fill="White" Margin="5,1,4,1" Stretch="Fill" StrokeThickness="2" UseLayoutRounding="False"/>
                                    </Grid>
                                </Hyperlink>
                            </TextBlock>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
