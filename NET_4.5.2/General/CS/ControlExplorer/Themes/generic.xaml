                                <c1:C1TextBoxBase Padding="5 0 25 3" VerticalContentAlignment="Bottom" CornerRadius="0" BorderThickness="0" Watermark="{TemplateBinding PlaceholderText}" C1Text="{Binding SearchCriteria, Mode=TwoWay}"/>
                            </c1:C1DropDown.Header>
                            <Border Background="#FFF1F5F6" BorderBrush="#FFBBBBBB" BorderThickness="1" Width="{TemplateBinding Width}">
                                <c1:C1TreeView x:Name="TreeView" ItemsSource="{Binding SearchList}" SelectionMode="Single"
                                           MaxHeight="402" Padding="0" Background="#FFF1F5F6" BorderBrush="#FFAACDDA" BorderThickness="0">
                                    <c1:C1TreeView.MouseOverBrush>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#4C9EBCC4"/>
                                        </LinearGradientBrush>
                                    </c1:C1TreeView.MouseOverBrush>
                                    <c1:C1TreeView.Template>
                                        <ControlTemplate TargetType="c1:C1TreeView">
                                            <Grid x:Name="Root">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                                        BorderBrush="{TemplateBinding Background}" />
                                                <Border BorderThickness="{TemplateBinding BorderThickness}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" >
                                                    <Grid>
                                                        <ScrollViewer x:Name="Scroll" HorizontalScrollBarVisibility="Auto"
                                                                      VerticalScrollBarVisibility="Auto" IsTabStop="False" 
                                                                      BorderThickness="0" Padding="{TemplateBinding Padding}"
                                                                      c1:ClearStyleExtensions.ScrollBarStyle="{Binding Path=ScrollBarStyle,RelativeSource={RelativeSource TemplatedParent}}">
                                                            <ItemsPresenter />
                                                        </ScrollViewer>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </ControlTemplate>
                                    </c1:C1TreeView.Template>
                                    <c1:C1TreeView.ItemContainerStyleSelector>
                                        <local:HierarchicalStyleSelector>
                                            <local:HierarchicalStyleSelector.FirstLevelStyle>
                                                <Style TargetType="c1:C1TreeViewItem">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="c1:C1TreeViewItem">
                                                                <Grid x:Name="HeaderPanelContainer">
                                                                    <VisualStateManager.VisualStateGroups>
                                                                        <VisualStateGroup x:Name="CommonStates">
                                                                            <VisualState x:Name="Normal" />
                                                                            <VisualState x:Name="Disabled">
                                                                            </VisualState>
                                                                            <VisualState x:Name="MouseOver">
                                                                            </VisualState>
                                                                        </VisualStateGroup>
                                                                        <VisualStateGroup x:Name="SelectedStates">
                                                                            <VisualState x:Name="Selected">
                                                                                <Storyboard>
                                                                                    <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="SelectedElement" Storyboard.TargetProperty="(UIElement.Visibility)">
                                                                                        <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                                                            <DiscreteObjectKeyFrame.Value>
                                                                                                <Visibility>Visible</Visibility>
                                                                                            </DiscreteObjectKeyFrame.Value>
                                                                                        </DiscreteObjectKeyFrame>
                                                                                    </ObjectAnimationUsingKeyFrames>
                                                                                </Storyboard>
                                                                            </VisualState>
                                                                            <VisualState x:Name="Unselected" />
                                                                        </VisualStateGroup>
                                                                        <VisualStateGroup x:Name="ExpandedStates">
                                                                            <VisualState x:Name="Expanded">
                                                                                <Storyboard>
                                                                                    <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="ChildrenPanel" Storyboard.TargetProperty="(UIElement.Visibility)">
                                                                                        <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                                                            <DiscreteObjectKeyFrame.Value>
                                                                                                <Visibility>Visible</Visibility>
                                                                                            </DiscreteObjectKeyFrame.Value>
                                                                                        </DiscreteObjectKeyFrame>
                                                                                    </ObjectAnimationUsingKeyFrames>
                                                                                </Storyboard>
                                                                            </VisualState>
                                                                            <VisualState x:Name="Collapsed">
                                                                                <Storyboard>
                                                                                    <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="ChildrenPanel" Storyboard.TargetProperty="(UIElement.Visibility)">
                                                                                        <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                                                            <DiscreteObjectKeyFrame.Value>
                                                                                                <Visibility>Collapsed</Visibility>
                                                                                            </DiscreteObjectKeyFrame.Value>
                                                                                        </DiscreteObjectKeyFrame>
                                                                                    </ObjectAnimationUsingKeyFrames>
                                                                                </Storyboard>
                                                                            </VisualState>
                                                                        </VisualStateGroup>
                                                                    </VisualStateManager.VisualStateGroups>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition Height="Auto"/>
                                                                    </Grid.RowDefinitions>
                                                                    <Grid Visibility="Collapsed">
                                                                        <ToggleButton x:Name="ExpandButton" IsThreeState="False" Margin="0" Visibility="Collapsed"/>
                                                                    </Grid>
                                                                    <local:HyperlinkButton Foreground="Transparent" ContentTemplate="{Binding Control.IconSearch}" Padding="0" NavigateUri="{Binding Control.Link}" Width="27" Height="27" Margin="5" VerticalAlignment="Top" Style="{StaticResource BreadcrumbHyperlink}" />
                                                                    <Grid x:Name="HeaderPanel" Grid.Column="1">
                                                                        <Grid Visibility="Collapsed">
                                                                            <ContentControl x:Name="Header"/>
                                                                            <ContentControl x:Name="HeaderEditor"/>
                                                                        </Grid>
                                                                        <Border x:Name="SelectedElement"
                                                                                Background="{TemplateBinding SelectedBackground}" 
                                                                                BorderThickness="0"
                                                                                Visibility="Collapsed"/>
                                                                        <local:HyperlinkButton Style="{StaticResource SearchControlText}" VerticalAlignment="Center" Content="{Binding Control.Name}" NavigateUri="{Binding Control.Link}" Grid.Column="1" Margin="0 4"/>
                                                                    </Grid>
                                                                    <ItemsPresenter x:Name="ChildrenPanel" Grid.Row="1" Grid.Column="1"/>
                                                                    <Line Grid.Row="2" Grid.ColumnSpan="2" Margin="0 5 0 0" X1="0" Y1="1" X2="240" Y2="1" Stroke="#FFAFAFAF" StrokeDashArray="1 2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Grid>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </local:HierarchicalStyleSelector.FirstLevelStyle>
                                        </local:HierarchicalStyleSelector>
                                    </c1:C1TreeView.ItemContainerStyleSelector>
                                </c1:C1TreeView>
                            </Border>
                        </c1:C1DropDown>
