<Window x:Class="OlapSamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OlapSamples"
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
        Title="OLAP for WPF Samples" Height="350" Width="525" WindowState="Maximized">
    <Grid>
        <c1:C1TabControl TabItemShape="Sloped" Padding="10" BorderThickness="1" BorderBrush="LightGray">
            <c1:C1TabControl.ItemContainerStyle>
                <Style TargetType="c1:C1TabItem">
                    <Setter Property="Padding" Value="8" />
                </Style>
            </c1:C1TabControl.ItemContainerStyle>
            <c1:C1TabItem Header="See it in action">
                <local:OlapDemo />
            </c1:C1TabItem>
        </c1:C1TabControl>
    </Grid>
</Window>
