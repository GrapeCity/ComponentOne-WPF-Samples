<UserControl x:Class="CustomThemes.Controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer>
        <UniformGrid>
            <c1:C1TextBoxBase Text="C1TextBoxBase" TextWrapping="Wrap" Height="28" Margin="10" HorizontalAlignment="Left" />

            <c1:C1ComboBox Height="28" Margin="10">
                <c1:C1ComboBoxItem Content="Uno" />
                <c1:C1ComboBoxItem Content="Dos" />
                <c1:C1ComboBoxItem Content="Tres" />
            </c1:C1ComboBox>

            <c1:C1NumericBox Height="28" Margin="10" />

            <c1:C1FilePicker Margin="10" Height="28" />

            <c1:C1Menu x:Name="VisualStudioMenu4" Margin="10" Height="25">
                <c1:C1MenuItem Header="File">
                    <c1:C1MenuItem Header="New">
                        <c1:C1MenuItem Header="Project..." />
                        <c1:C1MenuItem Header="Web Site..." />
                        <c1:C1MenuItem Header="Team Project..." />
                        <c1:C1MenuItem Header="File..." />
                    </c1:C1MenuItem>
                    <c1:C1MenuItem Header="Open">
                        <c1:C1MenuItem Header="Project..." />
                        <c1:C1MenuItem Header="Web Site..." />
                        <c1:C1MenuItem Header="File..." />
                    </c1:C1MenuItem>
                    <c1:C1Separator />
                    <c1:C1MenuItem Header="Close" />
                    <c1:C1MenuItem Header="Close Solution" />
                    <c1:C1Separator />
                    <c1:C1MenuItem Header="Save" />
                    <c1:C1MenuItem Header="Save All" />
                    <c1:C1Separator />
                    <c1:C1MenuItem Header="Page Setup" />
                    <c1:C1MenuItem Header="Print" />
                    <c1:C1Separator />
                    <c1:C1MenuItem Header="Exit" />
                </c1:C1MenuItem>
                <c1:C1MenuItem Header="Edit">
                    <c1:C1MenuItem Header="Undo" />
                    <c1:C1MenuItem Header="Redo" />
                    <c1:C1Separator />
                    <c1:C1MenuItem Header="Cut" />
                    <c1:C1MenuItem Header="Copy" />
                    <c1:C1MenuItem Header="Paste" />
                    <c1:C1MenuItem Header="Delete" />
                </c1:C1MenuItem>
                <c1:C1MenuItem Header="Window">
                    <c1:C1MenuItem Header="Document 1" IsCheckable="True" IsChecked="True" />
                    <c1:C1MenuItem Header="Document 2" IsCheckable="True" IsChecked="True" />
                    <c1:C1MenuItem Header="Document 3" IsCheckable="True" />
                    <c1:C1MenuItem Header="Document 4" IsCheckable="True" />
                </c1:C1MenuItem>
            </c1:C1Menu>

            <c1:C1RangeSlider Orientation="Horizontal" Margin="10" />

            <c1:C1TreeView Margin="10">
                <c1:C1TreeViewItem Header="Header">
                    <c1:C1TreeViewItem Header="SubNode 1" />
                    <c1:C1TreeViewItem Header="SubNode 2" />
                </c1:C1TreeViewItem>
                <c1:C1TreeViewItem Header="Header 2">
                    <c1:C1TreeViewItem Header="SubNode 1" />
                    <c1:C1TreeViewItem Header="SubNode 2" />
                </c1:C1TreeViewItem>
            </c1:C1TreeView>
        </UniformGrid>
    </ScrollViewer>
</UserControl>
