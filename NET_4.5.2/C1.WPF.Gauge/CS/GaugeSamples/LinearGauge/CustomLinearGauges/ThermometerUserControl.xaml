                        <GradientStop Color="#FF18222D" Offset="0.72" />
                        <GradientStop Color="#FFACB0B3" Offset="0.72" />
                    </LinearGradientBrush>
                </Rectangle.Stroke>
            </Rectangle>
        </DataTemplate>

    </UserControl.Resources>

    <Border x:Name="LayoutRoot" Background="#FF151515" BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
