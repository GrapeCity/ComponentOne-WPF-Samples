<Window x:Class="FlexSheetSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FlexSheetSample"
        WindowState="Maximized"
        Title="FlexSheetSample WPF" Height="350" Width="525">
    <!-- layout root -->
    <Grid Name="LayoutRoot" Background="#D6DCE7">
        <c1:C1TabControl TabItemShape="Sloped" Padding="10" BorderThickness="1" BorderBrush="LightGray">
            <c1:C1TabControl.ItemContainerStyle>
                <Style TargetType="c1:C1TabItem">
                    <Setter Property="Padding" Value="8" />
                </Style>
            </c1:C1TabControl.ItemContainerStyle>
            <c1:C1TabItem Header="See it in action">
                <local:FlexSheetDemo />
            </c1:C1TabItem>
        </c1:C1TabControl>

    </Grid>
</Window>
