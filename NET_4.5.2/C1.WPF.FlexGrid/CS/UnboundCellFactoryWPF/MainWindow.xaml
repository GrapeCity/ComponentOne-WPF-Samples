<Window x:Class="UnboundCellFactoryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
        Title="C1FlexGrid: Unbound CellFactory" Height="350" Width="525" WindowStartupLocation="CenterScreen">
  <Grid x:Name="LayoutRoot" Background="White">

    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>
    <CheckBox Name="_ccf" Content="Use Custom Cell Factory" IsChecked="true" Margin="12" />
    <c1:C1FlexGrid Name="_flex" Grid.Row="1" />
  </Grid>
</Window>
