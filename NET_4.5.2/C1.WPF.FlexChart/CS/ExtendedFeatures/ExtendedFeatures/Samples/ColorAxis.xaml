<UserControl x:Class="ExtendedFeatures.Samples.ColorAxis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExtendedFeatures.Samples"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <c1:C1FlexChart x:Name="chart" Loaded="ChartLoaded" Header="2D deformation distribution"
                        ToolTipContent="{}{item:0.00}" LegendPosition="None">
            <c1:C1FlexChart.HeaderStyle>
                <c1:ChartStyle FontSize="20" />
            </c1:C1FlexChart.HeaderStyle>
            <c1:C1FlexChart.AxisX>
                <c1:Axis AxisLine="True" MajorGrid="False" MajorTickMarks="Outside" />
            </c1:C1FlexChart.AxisX>
            <c1:C1FlexChart.AxisY>
                <c1:Axis AxisLine="True" MajorGrid="False" MajorTickMarks="Outside" />
            </c1:C1FlexChart.AxisY>

        </c1:C1FlexChart>
    </Grid>
</UserControl>
