<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttViewSample"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="GanttViewSample.MainWindow"
        mc:Ignorable="d"
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
        Title="GanttViewSample" Height="600" Width="900">
    <Grid>
        <c1:C1TabControl UnselectedContentMode="Collapsed">
            <c1:C1TabItem Header="DemoGanttView">
                <local:GanttViewDemo />
            </c1:C1TabItem>
            <c1:C1TabItem Header="CustomColumn">
                <local:CustomColumn />
            </c1:C1TabItem>
            <c1:C1TabItem Header="Filter">
                <local:Filter />
            </c1:C1TabItem>
        </c1:C1TabControl>
    </Grid>
</Window>
