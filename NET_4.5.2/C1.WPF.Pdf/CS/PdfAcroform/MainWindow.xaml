<Window x:Class="PdfAcroform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
        Title="C1Pdf Acroform sample" Height="350" Width="625" WindowStartupLocation="CenterScreen">
    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="You can save a PDF file with acroform and open in Adobe Acrobat." VerticalAlignment="Center" Margin="6 0" />
        </Grid>

        <c1:C1PdfViewer Name="c1PdfViewer1" Grid.Row="1" />
    </Grid>
</Window>
