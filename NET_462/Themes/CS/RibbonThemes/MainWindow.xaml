<RibbonWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:RibbonThemes"
    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
    xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
    x:Class="RibbonThemes.MainWindow" Title="MainWindow" x:Name="root" WindowState="Maximized">
    <Grid x:Name="LayoutRoot">
        <Grid.Resources>
            <local:VisibilityConverter x:Key="VisibilityConverter"/>
            <Style TargetType="ribbon:RibbonApplicationMenuItem" x:Key="SubRibbonApplicationMenu">
                <Setter Property="HeaderTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <AccessText Grid.Row="0" FontWeight="Bold" Text="{Binding ToolTip}" />
                                <TextBlock Grid.Row="1" Text="{Binding ToolTipDescription}" TextWrapping="Wrap" />
                            </Grid>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <Style TargetType="ribbon:RibbonComboBox">
                <Setter Property="CanUserResizeVertically" Value="True" />
            </Style>
            <Style TargetType="ribbon:RibbonGalleryCategory" x:Key="FontCategory">
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <TextBlock Text="{Binding Source}" FontFamily="{Binding}" FontSize="12" />
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="ribbon:RibbonGalleryCategory" x:Key="ImageHeaderCategory">
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <ribbon:RibbonMenuItem ImageSource="{Binding ImageSource}" Header="{Binding Header}" />
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="ribbon:RibbonGalleryCategory" x:Key="ColorCategory">
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Rectangle Width="16" Height="16" StrokeThickness="1" Fill="{Binding Fill}" ToolTip="{Binding ToolTip}" Stroke="LightGray" />
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="ribbon:RibbonGalleryCategory" x:Key="CellStyleCategory">
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Border Width="90" Height="20" Background="{Binding Fill}" ToolTip="{Binding ToolTip}">
                                <TextBlock Foreground="{Binding Foreground}" Text="{Binding ToolTip}" HorizontalAlignment="Left" VerticalAlignment="Center" />
                            </Border>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="ribbon:RibbonGalleryCategory" x:Key="LineGalleryCategory">
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Grid Height="20" Width="80" >
                                <TextBlock x:Name="noBorders" VerticalAlignment="Center" HorizontalAlignment="Center" Text="No Borders" Visibility="Collapsed"/>
                                <Line x:Name="singleLine" SnapsToDevicePixels="True" X1="5" Y1="5" X2="60" Y2="5" VerticalAlignment="Center" HorizontalAlignment="Center" Stroke="Black" StrokeDashArray="{Binding StrokeDashArray}" StrokeThickness="{Binding StrokeThickness}" Visibility="Collapsed"/>
                                <Line x:Name="doubleLine" SnapsToDevicePixels="True" X1="5" Y1="5" X2="60" Y2="5" VerticalAlignment="Center" HorizontalAlignment="Center" StrokeThickness="{Binding StrokeThickness}" Visibility="Collapsed">
                                    <Line.Stroke>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <LinearGradientBrush.GradientStops>
                                                <GradientStopCollection>
                                                    <GradientStop Color="Black" Offset="0.2"/>
                                                    <GradientStop Color="Transparent" Offset="0.2"/>
                                                    <GradientStop Color="Transparent" Offset="0.8"/>
                                                    <GradientStop Color="Black" Offset="0.8"/>
                                                </GradientStopCollection>
                                            </LinearGradientBrush.GradientStops>
                                        </LinearGradientBrush>
                                    </Line.Stroke>
                                </Line>
                            </Grid>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding Tag}" Value="None">
                                    <Setter TargetName="noBorders" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="singleLine" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="doubleLine" Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Tag}" Value="Single">
                                    <Setter TargetName="noBorders" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="singleLine" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="doubleLine" Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Tag}" Value="Double">
                                    <Setter TargetName="noBorders" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="singleLine" Property="Visibility" Value="Collapsed" />
                                    <Setter TargetName="doubleLine" Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="ribbon:RibbonGalleryCategory" x:Key="LargeImageCategory">
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding ImageSource}" />
                                <TextBlock Text="{Binding Header}" Grid.Column="1" Margin="5, 0, 0, 0" FontWeight="Bold" />
                            </Grid>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="ribbon:RibbonGalleryCategory" x:Key="LargeImageToolTipCategory">
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Image Width="32" Height="32" Source="{Binding ImageSource}">
                                <Image.ToolTip>
                                    <ribbon:RibbonToolTip Title="{Binding ToolTip}" Description="{Binding ToolTipDescription}"/>
                                </Image.ToolTip>
                            </Image>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ribbon:Ribbon HorizontalAlignment="Stretch" Grid.Row="0" x:Name="ribbon">
            <!-- Help Pane, located at the right-hand side -->
            <ribbon:Ribbon.HelpPaneContent>
                <ribbon:RibbonButton SmallImageSource="Resources\help16.png" />
            </ribbon:Ribbon.HelpPaneContent>
            <!-- Quick Access Toolbar - located at the upper-left corner -->
            <ribbon:Ribbon.QuickAccessToolBar>
                <ribbon:RibbonQuickAccessToolBar Height="26" >
                    <ribbon:RibbonButton x:Name="Save" SmallImageSource="Resources\save.png" ToolTip="Save" VerticalAlignment="Center"/>
                    <ribbon:RibbonSeparator/>
                    <ribbon:RibbonSplitButton x:Name="Undo" SmallImageSource="Resources\undo.png" VerticalAlignment="Center">
                        <ribbon:RibbonSplitMenuItem Header="Undo 1" />
                        <ribbon:RibbonSplitMenuItem Header="Undo 2" />
                        <ribbon:RibbonSplitMenuItem Header="Undo 3" />
                    </ribbon:RibbonSplitButton>
                    <ribbon:RibbonSplitButton x:Name="Redo" SmallImageSource="Resources\redo.png" VerticalAlignment="Center">
                        <ribbon:RibbonSplitMenuItem Header="Redo 1" />
                        <ribbon:RibbonSplitMenuItem Header="Redo 2" />
                    </ribbon:RibbonSplitButton>
                </ribbon:RibbonQuickAccessToolBar>
            </ribbon:Ribbon.QuickAccessToolBar>
            <!-- Application Menu, located at the left-hand side (down arrow) -->
            <ribbon:Ribbon.ApplicationMenu>
                <ribbon:RibbonApplicationMenu KeyTip="F" SmallImageSource="Resources/ApplicationMenu/new16.png">
                    <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/new.png" Header="New" />
                    <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/open.png" Header="Open" ToolTip="Open (Ctrl + O)" />
                    <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/save.png" Header="Save" ToolTip="Save (Ctrl + S)"/>
                    <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/SaveAs/save_as.png" Header="Save As" ToolTip="Save As (F12)">
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/SaveAs/excel_workbook.png" x:Name="saveas1" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/SaveAs/excel_macro_enabled_workbook.png" x:Name="saveas2" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/SaveAs/excel_binary_workbook.png" x:Name="saveas3" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/SaveAs/excel_97_2003_workbook.png" x:Name="saveas4" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/SaveAs/find_add_ins_for_other_file_formats.png" x:Name="saveas5" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/SaveAs/other_formats.png" x:Name="saveas6" Style="{StaticResource SubRibbonApplicationMenu}"/>
                    </ribbon:RibbonApplicationMenuItem>
                    <ribbon:RibbonSeparator/>
                    <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Print/print.png" Header="Print" ToolTip="Print (Ctrl + P)">
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Print/print.png" x:Name="print1" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Print/quick_print.png" x:Name="print2" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Print/print_preview.png" x:Name="print3" Style="{StaticResource SubRibbonApplicationMenu}"/>
                    </ribbon:RibbonApplicationMenuItem>
                    <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Prepare/prepare.png" Header="Prepare">
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Prepare/properties.png" x:Name="prepare1" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Prepare/inspect_document.png" x:Name="prepare2" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Prepare/encrypt_document.png" x:Name="prepare3" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Prepare/restrict_permission.png" x:Name="prepare4" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Prepare/add_a_digital_signature.png" x:Name="prepare5" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Prepare/mark_as_fianl.png" x:Name="prepare6" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Prepare/run_compatibility_checker.png" x:Name="prepare7" Style="{StaticResource SubRibbonApplicationMenu}"/>
                    </ribbon:RibbonApplicationMenuItem>
                    <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Send/send.png" Header="Send" >
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Send/e_mail.png" x:Name="send1" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Send/internet_fax.png" x:Name="send2" Style="{StaticResource SubRibbonApplicationMenu}"/>
                    </ribbon:RibbonApplicationMenuItem>
                    <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Publish/publish.png" Header="Publish" >
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Publish/excel_services.png" x:Name="publish1" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Publish/document_management_server.png" x:Name="publish2" Style="{StaticResource SubRibbonApplicationMenu}"/>
                        <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/Publish/create_document_workspace.png" x:Name="publish3" Style="{StaticResource SubRibbonApplicationMenu}"/>
                    </ribbon:RibbonApplicationMenuItem>
                    <ribbon:RibbonSeparator/>
                    <ribbon:RibbonApplicationMenuItem ImageSource="Resources/ApplicationMenu/close.png" Header="Close" />
                    <!-- Most Recently Used Items -->
                    <ribbon:RibbonApplicationMenu.AuxiliaryPaneContent>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <ribbon:RibbonSeparator Grid.Row="0" Label="Recent Documents" FontWeight="Bold"/>
                            <ItemsControl Grid.Row="2" x:Name="recentDocs">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border x:Name="MainBorder" 
                                                BorderThickness="1"
                                                Padding="5,2,5,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="5" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Index}" TextDecorations="Underline" />
                                                <TextBlock Grid.Column="2" Text="{Binding Name}" />
                                                <Image Tag="{Binding ElementName=unpin}" MouseLeftButtonUp="image_MouseLeftButtonUp"  x:Name="pin" Grid.Column="3" Source="Resources/ApplicationMenu/pin.png" Visibility="{Binding IsPinned, Converter={StaticResource VisibilityConverter}, ConverterParameter = 1, Mode=TwoWay, UpdateSourceTrigger = PropertyChanged}" />
                                                <Image Tag="{Binding ElementName=pin}" MouseLeftButtonUp="image_MouseLeftButtonUp" x:Name="unpin"  Grid.Column="3" Source="Resources/ApplicationMenu/unpin.png" Visibility="{Binding IsPinned, Converter={StaticResource VisibilityConverter}, ConverterParameter = -1, Mode=TwoWay, UpdateSourceTrigger = PropertyChanged}" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ribbon:RibbonApplicationMenu.AuxiliaryPaneContent>

                    <ribbon:RibbonApplicationMenu.FooterPaneContent>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ribbon:RibbonButton Grid.Column="1" SmallImageSource="Resources/ApplicationMenu/excel_options.png" Label="Excel Options"/>
                            <ribbon:RibbonButton Grid.Column="2" SmallImageSource="Resources/ApplicationMenu/delete.png" Label="Exit Excel" Click="exit_Click"/>
                        </Grid>
                    </ribbon:RibbonApplicationMenu.FooterPaneContent>
                </ribbon:RibbonApplicationMenu>
                
             </ribbon:Ribbon.ApplicationMenu>
            
            <ribbon:RibbonTab Header="Home" KeyTip="H" GroupSizeReductionOrder="Theme, Editing, Cells, Number, Alignment, Font, Clipboard">
                <ribbon:RibbonGroup x:Name="Theme" Margin="0,1" Header="Theme" QuickAccessToolBarId="Theme" SmallImageSource="Resources/Home/theme.png">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Margin="0,5,0,0">
                        <ribbon:RibbonComboBox x:Name="cmbTheme" SelectionBoxWidth="160" >
                            <ribbon:RibbonGallery x:Name="themeGallery" MaxColumnCount="1" 
                                              SelectionChanged="themeGallery_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                <ribbon:RibbonGalleryCategory x:Name="themesCategory" ItemsSource="{Binding}" />
                            </ribbon:RibbonGallery>
                        </ribbon:RibbonComboBox>
                    </StackPanel>
                </ribbon:RibbonGroup>
                <ribbon:RibbonGroup Header="Clipboard" SmallImageSource="Resources/Home/Clipboard/paste16.png">
                    <ribbon:RibbonSplitButton Label="Paste" LargeImageSource ="Resources/Home/Clipboard/paste32.png" ToolTipTitle="Paste (Ctrl+V)" 
                                              ToolTipDescription="Add content on the Clipboard to your document." >
                        <ribbon:RibbonMenuItem Header="Keep Source Formatting (K)" ImageSource="Resources/Home/Clipboard/paste16.png" ToolTipTitle="Keep Source Formatting (K)" />
                        <ribbon:RibbonMenuItem Header="Match Destination Formatting (K)" ImageSource="Resources/Home/Clipboard/paste16.png" ToolTipTitle="Match Destination Formatting (K)" />
                        <ribbon:RibbonMenuItem Header="Paste Special..."/>
                    </ribbon:RibbonSplitButton>
                    <ribbon:RibbonButton Label="Cut" SmallImageSource="Resources/Home/Clipboard/cut.png" ToolTipTitle="Cut (Ctrl+X)" 
                                         ToolTipDescription="Remove the selection and put it on the Clipboard so you can paste it somewhere else." />
                    <ribbon:RibbonSplitButton Label="Copy" SmallImageSource="Resources/Home/Clipboard/copy.png" ToolTipTitle="Copy (Ctrl+C)"
                                         ToolTipDescription="Put a copy of the selection on the Clipboard so you can paste it somewhere else.">
                        <ribbon:RibbonMenuItem Header="Copy" ImageSource="Resources/Home/Clipboard/copy.png" ToolTipTitle="Cut (Ctrl+C)"
                                         ToolTipDescription="Put a copy of the selection on the Clipboard so you can paste it somewhere else." />
                        <ribbon:RibbonMenuItem Header="Copy as Picture..."/>
                    </ribbon:RibbonSplitButton>
                    <ribbon:RibbonButton Label="Format Painter" SmallImageSource="Resources/Home/Clipboard/format_painter.png" ToolTipTitle="Format Painter"
                                         ToolTipDescription="Like the look of a particular selection? You can apply that look to other content in the document.&#x000A;&#x000A;To get started:&#x000A;1. Select content with the formatting you like&#x000A;2. Click Format Painter&#x000A;3. Select something else to automatically apply the formatting&#x000A;&#x000A;FYI: To apply the formatting in multiple places, double-click Format Painter."
                                         ToolTipFooterTitle="Tell me more" ToolTipFooterImageSource="Resources/help16.png"/>
                </ribbon:RibbonGroup>
                <ribbon:RibbonGroup Header="Font" SmallImageSource="Resources/Home/Font/font_color.png">
                    <ribbon:RibbonContentPresenter>
                        <ribbon:RibbonContentPresenter.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Margin="0,5,0,0">
                                    <ribbon:RibbonComboBox ToolTipTitle = "Font" ToolTipDescription="Pick a new font for your text."  SelectionBoxWidth="110" >
                                        <ribbon:RibbonGallery MaxColumnCount="1" x:Name="fontGallery">
                                            <ribbon:RibbonGalleryCategory Header="Theme Fonts" x:Name="themeFontGalleryCategory" Style="{StaticResource FontCategory}" />
                                            <ribbon:RibbonGalleryCategory Header="All Fonts" x:Name="allFontGalleryCategory" Style="{StaticResource FontCategory}" />
                                        </ribbon:RibbonGallery>
                                    </ribbon:RibbonComboBox>
                                    <ribbon:RibbonComboBox ToolTipTitle = "Font Size" ToolTipDescription="Change the size of your text."  SelectionBoxWidth="25">
                                        <ribbon:RibbonGallery MaxColumnCount="1" x:Name="fontSizeGallery">
                                            <ribbon:RibbonGalleryCategory x:Name="fontSizeGalleryCategory" />
                                        </ribbon:RibbonGallery>
                                    </ribbon:RibbonComboBox>
                                    <ribbon:RibbonControlGroup>
                                        <ribbon:RibbonButton SmallImageSource="Resources/Home/Font/increase_font_size.png" ToolTipTitle="Increase Font Size" 
                                         ToolTipDescription="Make your text a bit bigger." />
                                        <ribbon:RibbonButton SmallImageSource="Resources/Home/Font/decrease_font_size.png" ToolTipTitle="Decrease Font Size" 
                                         ToolTipDescription="Make your text a bit smaller." />
                                    </ribbon:RibbonControlGroup>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center" Margin="0,5,0,0">
                                    <ribbon:RibbonToggleButton Label="B" FontFamily="Times New Roman" FontSize="13" FontWeight="Bold" ToolTipTitle="Bold (Ctrl+B)" 
                                         ToolTipDescription="Make your text bold." />
                                    <ribbon:RibbonToggleButton Label="I" FontFamily="Times New Roman" FontSize="13" FontWeight="Bold" FontStyle="Italic" ToolTipTitle="Italic (Ctrl+I)" 
                                         ToolTipDescription="Italicize your text." />

                                    <ribbon:RibbonSplitButton x:Name="btnUnderline" SmallImageSource="Resources/Home/Font/underline.png" ToolTipTitle="Underline (Ctrl+U)" 
                                         ToolTipDescription="Underline your text.">
                                        <ribbon:RibbonMenuItem x:Name="menuUnderline" Header="Underline" ImageSource="Resources/Home/Font/underline.png"/>
                                        <ribbon:RibbonMenuItem x:Name="menuDoubleUnderline" Header="Double Underline" ImageSource="Resources/Home/Font/double_underline.png" />
                                    </ribbon:RibbonSplitButton>
                                    
                                    <ribbon:RibbonSeparator />      
                                    <ribbon:RibbonSplitButton x:Name="btnBottomBorder" SmallImageSource="Resources/Home/Font/bottom_border.png" ToolTipTitle="Bottom Border" >
                                        <ribbon:RibbonGallery MaxColumnCount="1">
                                            <ribbon:RibbonGalleryCategory Header="Borders" x:Name="bordersGalleryCategory1" Style="{StaticResource ImageHeaderCategory}"/>
                                            <ribbon:RibbonSeparator/>
                                            <ribbon:RibbonGalleryCategory x:Name="bordersGalleryCategory2" Style="{StaticResource ImageHeaderCategory}"/>
                                            <ribbon:RibbonSeparator/>
                                            <ribbon:RibbonGalleryCategory x:Name="bordersGalleryCategory3" Style="{StaticResource ImageHeaderCategory}"/>
                                            <ribbon:RibbonGalleryCategory Header="Draw Borders" x:Name="drawBordersGalleryCategory" Style="{StaticResource ImageHeaderCategory}"/>
                                        </ribbon:RibbonGallery>
                                        <ribbon:RibbonMenuItem Header="Line Color" ImageSource="Resources/Home/Font/line_color.png">
                                            <ribbon:RibbonGallery ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                                <ribbon:RibbonGalleryCategory MaxColumnCount="1" MinColumnCount="1" IsSharedColumnSizeScope="True">
                                                    <ribbon:RibbonGalleryItem>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Rectangle Width="20" Height="20" Fill="Black" Stroke="LightGray" StrokeThickness="1" />
                                                            <TextBlock Grid.Column="1" Text="Automatic" Margin="12,0,0,0" VerticalAlignment="Center" />
                                                        </Grid>
                                                    </ribbon:RibbonGalleryItem>
                                                </ribbon:RibbonGalleryCategory>
                                                <ribbon:RibbonGalleryCategory MaxColumnCount="10" MinColumnCount="10" Header="Theme Colors" x:Name="themeColorsGalleryCategory1" Style="{StaticResource ColorCategory}"/>
                                                <ribbon:RibbonGalleryCategory MaxColumnCount="10" MinColumnCount="10" Header="Standard Colors" x:Name="standardColorsGalleryCategory1" Style="{StaticResource ColorCategory}"/>
                                                <ribbon:RibbonMenuItem Header="More Colors..." ImageSource="Resources/Home/Font/more_fill_color.png" />
                                            </ribbon:RibbonGallery>
                                        </ribbon:RibbonMenuItem>
                                        <ribbon:RibbonMenuItem Header="Line Style">
                                            <ribbon:RibbonGallery MaxColumnCount="1" MinColumnCount="1">
                                                <ribbon:RibbonGalleryCategory HeaderVisibility="Collapsed" x:Name="lineGalleryCategory" Style="{StaticResource LineGalleryCategory}"/>
                                            </ribbon:RibbonGallery>
                                        </ribbon:RibbonMenuItem>
                                        <ribbon:RibbonMenuItem Header="More Borders..." ImageSource="Resources/Home/Font/more_border.png"/>
                                    </ribbon:RibbonSplitButton>
                                    <ribbon:RibbonSeparator Width="22" Height="2" Margin="-10 0" RenderTransformOrigin="0.5,0.5">
                                        <RibbonSeparator.RenderTransform>
                                            <RotateTransform Angle="90"/>
                                        </RibbonSeparator.RenderTransform>
                                    </ribbon:RibbonSeparator>
                                    <ribbon:RibbonSplitButton SmallImageSource="Resources/Home/Font/fill_color.png" ToolTipTitle="Fill Color"
                                                              ToolTipDescription="Color the background of cells to make them stand out."
                                                              ToolTipFooterImageSource="Resources/help16.png" ToolTipFooterTitle="Tell me more">
                                        <ribbon:RibbonGallery ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                            <ribbon:RibbonGalleryCategory MaxColumnCount="10" MinColumnCount="10" Header="Theme Colors" x:Name="themeColorsGalleryCategory2" Style="{StaticResource ColorCategory}"/>
                                            <ribbon:RibbonGalleryCategory MaxColumnCount="10" MinColumnCount="10" Header="Standard Colors" x:Name="standardColorsGalleryCategory2" Style="{StaticResource ColorCategory}"/>
                                            <ribbon:RibbonGalleryCategory MaxColumnCount="1" MinColumnCount="1" IsSharedColumnSizeScope="True">
                                                <ribbon:RibbonGalleryItem>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Rectangle Width="20" Height="20" Fill="Transparent" Stroke="LightGray" StrokeThickness="1"/>
                                                        <TextBlock Grid.Column="1" Text="No Fill" Margin="12,0,0,0" VerticalAlignment="Center" />
                                                    </Grid>
                                                </ribbon:RibbonGalleryItem>
                                            </ribbon:RibbonGalleryCategory>
                                            <ribbon:RibbonMenuItem Header="More Colors..." ImageSource="Resources/Home/Font/more_fill_color.png" />
                                        </ribbon:RibbonGallery>
                                    </ribbon:RibbonSplitButton>
                                    <ribbon:RibbonSplitButton SmallImageSource="Resources/Home/Font/font_color.png" ToolTipTitle="Font Color"
                                                              ToolTipDescription="Change the color of your text."
                                                              ToolTipFooterImageSource="Resources/help16.png" ToolTipFooterTitle="Tell me more">
                                        <ribbon:RibbonGallery ScrollViewer.VerticalScrollBarVisibility="Hidden">
