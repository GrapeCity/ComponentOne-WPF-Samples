                            <c1:C1MediaChapter Title="World wealth" Position="00:06:18" ThumbnailSource="Resources/HansRosling_2006_06_18.jpg" />
                            <c1:C1MediaChapter Title="GDP and child death" Position="00:09:16" ThumbnailSource="Resources/HansRosling_2006_09_16.jpg" />
                            <c1:C1MediaChapter Title="How can we use this data?" Position="00:15:04" ThumbnailSource="Resources/HansRosling_2006_15_04.jpg" />
                        </c1:C1MediaItem>
                    </c1:C1MediaPlayer>
                </c1:C1TabItem>

