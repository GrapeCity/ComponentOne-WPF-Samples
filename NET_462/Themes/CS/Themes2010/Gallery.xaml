                            <CheckBox x:Name="Grouping" Content="Enable Scheduler Grouping" VerticalAlignment="Center" Checked="Grouping_Checked" Unchecked="Grouping_Unchecked"/>
                            <Label Margin="10,5,5,5" Content="Scheduler View:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="ViewType" VerticalAlignment="Center" SelectedItem="{Binding ViewType, ElementName=sched1}" Padding="6,2" MinWidth="120"/>
                        </ToolBar>
                        <c1:C1Calendar x:Name="cal1" Grid.Column="0" Grid.Row="1"
                                       CalendarHelper="{Binding CalendarHelper, ElementName=sched1, Mode=OneWay}" SelectedDates="{Binding VisibleDates, ElementName=sched1, Mode=OneWay}"
                                       BoldedDates="{Binding BoldedDates, ElementName=sched1, Mode=OneWay}" MaxSelectionCount="42" GenerateAdjacentMonthDays="True" />
                        <c1:C1Scheduler x:Name="sched1" Grid.Column="1" Grid.Row="1">
                            <c1:C1Scheduler.Settings>
                                <c1:C1SchedulerSettings SetReminder="False"/>
                            </c1:C1Scheduler.Settings>
                        </c1:C1Scheduler>
                    </Grid>
                </c1:C1TabItem>

                <!-- OutlookBar -->
                <c1:C1TabItem Header="OutlookBar">
                        <c1:C1OutlookBar x:Name="c1OutlookBar1" Margin="20"
                              IsExpanded="True" FontFamily="Arial" MinWidth="36" ExpandedWidth="300">

                            <!-- content shown when the bar is collapsed -->
                            <c1:C1OutlookBar.CollapsedContent>
                                <c1:C1LayoutTransformer>
                                    <c1:C1LayoutTransformer.LayoutTransform>
                                        <RotateTransform Angle="270" />
                                    </c1:C1LayoutTransformer.LayoutTransform>
                                    <Border x:Name="transformerBorder">
                                        <TextBlock FontSize="13" TextAlignment="Center" VerticalAlignment="Center" Text="Navigation Pane" />
                                    </Border>
                                </c1:C1LayoutTransformer>
                            </c1:C1OutlookBar.CollapsedContent>
                            <c1:C1OutlookBar.LargeIconTemplate>
                                <DataTemplate>
