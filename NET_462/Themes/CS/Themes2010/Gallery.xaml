                        <c1:C1GaugeMark Interval="20" />
                        <c1:C1GaugeMark Interval="10" />
                        <c1:C1GaugeMark Interval="1" />
                        <c1:C1GaugeLabel Interval="20" Alignment="Out" AlignmentOffset="10" />
                    </c1:C1Knob>
                </c1:C1TabItem>

                <!-- Maps -->
                <c1:C1TabItem Header="Maps">
                    <c1:C1Maps Zoom="3" Margin="20" />
                </c1:C1TabItem>

                <!--Sparkline-->
                <c1:C1TabItem Header="Sparkline">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 0" x:Name="spParkLine">
                            <TextBlock Margin="10 2 2 2" Text="SparklineType:" VerticalAlignment="Center"></TextBlock>
                            <ComboBox Margin="2 5 2 5" Width="180" x:Name="sparklineType" SelectionChanged="sparklineType_SelectionChanged"/>
                            
                            <TextBlock Margin="10 2 2 2" Text="Display XAxis:" VerticalAlignment="Center"/>
                            <CheckBox Margin="2" Width="30" VerticalAlignment="Center" IsChecked="{Binding ElementName=sparkline, Path=DisplayXAxis, Mode=TwoWay}"/>

                            <TextBlock Margin="10 2 2 2" Text="Show Markers :" VerticalAlignment="Center"/>
                            <CheckBox Margin="2" Width="30" VerticalAlignment="Center" IsChecked="{Binding ElementName=sparkline, Path=ShowMarkers, Mode=TwoWay}"/>

                            <Button Margin="10 5 2 5" Padding="10 0 10 0" Height="30" Content="New Data" Click="Button_Click"/>
                        </StackPanel>

                        <c1:C1Sparkline x:Name="sparkline" Grid.Row="1" Width="600"/>
                    </Grid>
                </c1:C1TabItem>

            </c1:C1TabControl>
        </c1:C1TabItem>

