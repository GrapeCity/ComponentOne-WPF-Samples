<UserControl x:Class="Themes.Gallery" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:c1gantt="clr-namespace:C1.GanttView;assembly=C1.WPF.GanttView.4.6.2"
             xmlns:c1df="clr-namespace:C1.DataFilter;assembly=C1.WPF.DataFilter.4.6.2"
             xmlns:ext="clr-namespace:Ext"
             xmlns:userControls="clr-namespace:OutlookBarSamples"
             xmlns:local="clr-namespace:Themes"
             xmlns:c1car="clr-namespace:C1.WPF.Carousel;assembly=C1.WPF.Carousel.4.6.2">
    <c1:C1TabControl TabStripPlacement="Top" SelectionChanged="C1TabControl_SelectionChanged" UnselectedContentMode="OutsideVisualTree">

        <c1:C1TabItem Header="Data Management">
            <c1:C1TabControl TabStripPlacement="Left" Margin="8 0 0 0" SelectionChanged="DataManagement_SelectionChanged">
                <!-- FlexGrid -->
                <c1:C1TabItem Header="FlexGrid">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <c1:C1FlexGridGroupPanel FlexGrid="{Binding ElementName=flexGrid}"/>
                        <c1:C1FlexGrid x:Name="flexGrid" Margin="10" HeadersVisibility="All" Grid.Row="1" AllowAddNew="True">
                            <c1:C1FlexGridFilterService.FlexGridFilter>
                                <c1:C1FlexGridFilter />
                            </c1:C1FlexGridFilterService.FlexGridFilter>
                        </c1:C1FlexGrid>
                    </Grid>
                </c1:C1TabItem>

                <!-- FlexSheet -->
                <c1:C1TabItem Header="FlexSheet">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <c1:C1FormulaBar Grid.Row="0" x:Name="formulaBar" />
                        <c1:C1FlexSheet Grid.Row="1" x:Name="flexSheet" Loaded="flexSheet_Loaded" Margin="10" />
                    </Grid>
                </c1:C1TabItem>
                
                <!-- OlapPage -->
                <c1:C1TabItem Header="OLAP">
                    <c1:C1OlapPage x:Name="olapPage" Margin="10"/>
                </c1:C1TabItem>

                <!-- DataGrid -->
                <c1:C1TabItem Header="DataGrid">
                    <c1:C1DataGrid x:Name="grid" CanUserGroup="True" Margin="10" CanUserFreezeColumns="Left" HeadersVisibility="All" CanUserAddRows="True"/>
                </c1:C1TabItem>

                <!-- C1ListBox -->
                <c1:C1TabItem Header="ListBox">
                    <c1:C1ListBox x:Name="listBox" Margin="10" CornerRadius="0" DisplayMemberPath="Name"/>
                </c1:C1TabItem>

                <!--GanttView-->
                <c1:C1TabItem Header="GanttView">
                    <c1:C1GanttView x:Name="ganttPage" Margin="10" StartDate="11/29/2016">
                        <c1:C1GanttView.Columns>
                            <c1gantt:TaskPropertyColumn Property="Mode" Visible="False"/>
                            <c1gantt:TaskPropertyColumn Property="Name" Width="280"/>
                            <c1gantt:TaskPropertyColumn Property="Duration" Visible="False"/>
                            <c1gantt:TaskPropertyColumn Property="DurationUnits" Visible="False"/>
                            <c1gantt:TaskPropertyColumn Property="Start" />
                            <c1gantt:TaskPropertyColumn Property="Finish" />
                            <c1gantt:TaskPropertyColumn Property="PercentComplete" />
                            <c1gantt:TaskPropertyColumn Property="ConstraintType" Visible="False"/>
                            <c1gantt:TaskPropertyColumn Property="ConstraintDate" Visible="False"/>
                            <c1gantt:TaskPropertyColumn Property="Predecessors" Visible="False"/>
                            <c1gantt:TaskPropertyColumn Property="Deadline" Visible="False"/>
                            <c1gantt:TaskPropertyColumn Property="Calendar" Visible="False"/>
                            <c1gantt:TaskPropertyColumn Property="ResourceNames" Visible="False"/>
                            <c1gantt:TaskPropertyColumn Property="Notes" Visible="False"/>
                        </c1:C1GanttView.Columns>
                        <c1:C1GanttView.Tasks>
                            <c1gantt:Task Name="Add GanttView to Themes Sample" Start="11/29/2016" Duration="2" PercentComplete="100">
                                <c1gantt:Task.ResourceRefs>
                                    <c1gantt:ResourceRef ResourceID="1002" />
                                </c1gantt:Task.ResourceRefs>
                            </c1gantt:Task>
                            <c1gantt:Task Name="Test all themes" Start="11/29/2016" Duration="2" PercentComplete="50">
                                <c1gantt:Task.ResourceRefs>
                                    <c1gantt:ResourceRef ResourceID="1002" />
                                </c1gantt:Task.ResourceRefs>
                            </c1gantt:Task>
                            <c1gantt:Task Name="Toolbar theme support" Start="12/1/2016" Duration="3" PercentComplete="20">
                                <c1gantt:Task.ResourceRefs>
                                    <c1gantt:ResourceRef ResourceID="1002" />
                                </c1gantt:Task.ResourceRefs>
                            </c1gantt:Task>
                            <c1gantt:Task Name="GridView and ChartView theme support" Start="12/6/2016" Duration="3" PercentComplete="20">
                                <c1gantt:Task.ResourceRefs>
                                    <c1gantt:ResourceRef ResourceID="1002" />
                                </c1gantt:Task.ResourceRefs>
                            </c1gantt:Task>
                            <c1gantt:Task Name="Context Menu theme support" Start="12/9/2016" Duration="2" PercentComplete="60">
                                <c1gantt:Task.ResourceRefs>
                                    <c1gantt:ResourceRef ResourceID="1002" />
                                    <c1gantt:ResourceRef ResourceID="1001" />
                                </c1gantt:Task.ResourceRefs>
                            </c1gantt:Task>
                            <c1gantt:Task Name="Dialog theme support" Start="12/12/2016" Duration="7" PercentComplete="40">
                                <c1gantt:Task.ResourceRefs>
                                    <c1gantt:ResourceRef ResourceID="1002" />
                                    <c1gantt:ResourceRef ResourceID="1001" />
                                </c1gantt:Task.ResourceRefs>
                            </c1gantt:Task>
                            <c1gantt:Task Name="Code review" Start="11/29/2016" Finish="12/21/2016" PercentComplete="10">
                                <c1gantt:Task.ResourceRefs>
                                    <c1gantt:ResourceRef ResourceID="1002" />
                                    <c1gantt:ResourceRef ResourceID="1001" />
                                </c1gantt:Task.ResourceRefs>
                            </c1gantt:Task>
                        </c1:C1GanttView.Tasks>
                        <c1:C1GanttView.TaskResources>
                            <c1gantt:Resource ID="1001" Name="Chris" Cost="1"/>
                            <c1gantt:Resource ID="1002" Name="Lee" Cost="1"/>
                        </c1:C1GanttView.TaskResources>
                    </c1:C1GanttView>
                </c1:C1TabItem>

                <!-- Data Filter -->
                <c1:C1TabItem Header="Data Filter">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <c1:C1DataFilter x:Name="c1DataFilter1" HeaderContent="Employees Filters" />
                        <c1:C1FlexGrid Grid.Column="1" AutoGenerateColumns="True" x:Name="dataFilterFlexGrid" />
                    </Grid>
                </c1:C1TabItem>

                <!-- Filter Editor-->
                <c1:C1TabItem Header="Filter Editor" x:Name="fEditorTab">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <c1:C1FilterEditor x:Name="filterEditor" Grid.Column="0" Grid.Row="0">
                           <c1:C1FilterEditor.Expression>
                               <c1df:CombinationExpression FilterCombination="Or">
                                    <c1df:CombinationExpression.Expressions>
                                        <c1df:OperationExpression PropertyName="Brand" FilterOperation="EqualText" Value="Rolls-Royce"/>
                                        <c1df:OperationExpression PropertyName="Brand" FilterOperation="Contains" Value="M"/>
                                    </c1df:CombinationExpression.Expressions>
                                </c1df:CombinationExpression>
                            </c1:C1FilterEditor.Expression>
                        </c1:C1FilterEditor>

                        <c1:C1FlexGrid AutoGenerateColumns="False" x:Name="filterEditorFlexGrid" Grid.Column="1" Grid.Row="0">
                            <c1:C1FlexGrid.Columns>
                                <c1:Column Header="ID" Binding="{Binding ID}" />
                                <c1:Column Header="Brand" MinWidth="120" Binding="{Binding Brand}" />
                                <c1:Column Header="Model" MinWidth="200" Binding="{Binding Model}" />
                                <c1:Column Header="Price" Binding="{Binding Price}" />
                                <c1:Column Header="Category" Binding="{Binding Category}" />
                            </c1:C1FlexGrid.Columns>
                        </c1:C1FlexGrid>
                    </Grid>
                </c1:C1TabItem>
                
            </c1:C1TabControl>
        </c1:C1TabItem>

        <c1:C1TabItem Header="Input &amp; Editing">
            <c1:C1TabControl TabStripPlacement="Left" Margin="8 0 0 0" SelectionChanged="InputEditing_SelectionChanged" >

                <!--InputPanel-->
                <c1:C1TabItem Header="Input Panel">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Content="C1InputPanel"/>
                        <c1:C1InputPanel x:Name="InputPanel" Grid.Row="1" Header="Input Panel" HeaderPadding="4" Margin="15" />
                    </Grid>
                </c1:C1TabItem>

                <!--Input-->
                <c1:C1TabItem Header="Input">
                    <ScrollViewer>
                        <c1:C1WrapPanel MaxWidth="1280" >
                            <CheckBox IsThreeState="True" VerticalAlignment="Center" Margin="10">CheckBox</CheckBox>
                            <Button x:Name="button" Width="150">Click me!</Button>
                            <c1:C1TextBoxBase TextWrapping="Wrap" Width="120" Margin="10 20 10 20" Text="Test" />

                            <c1:C1ComboBox Width="200" MaxDropDownHeight="100" Margin="10 20 10 20" Padding="0">
                                <c1:C1ComboBoxItem Content="Studio for Silverlight" />
                                <c1:C1ComboBoxItem Content="Studio for WPF" />
                                <c1:C1ComboBoxItem Content="Studio for ASP.NET" />
                                <c1:C1ComboBoxItem Content="Studio for iPhone" />
                                <c1:C1ComboBoxItem Content="Studio for WinForms" />
                                <c1:C1ComboBoxItem Content="Studio for ActiveX" />
                                <c1:C1ComboBoxItem Content="Studio for Mobile" />
                                <c1:C1ComboBoxItem Content="Studio for Silverlight" />
                                <c1:C1ComboBoxItem Content="Studio for WPF" />
                                <c1:C1ComboBoxItem Content="Studio for ASP.NET" />
                                <c1:C1ComboBoxItem Content="Studio for iPhone" />
                                <c1:C1ComboBoxItem Content="Studio for WinForms" />
                                <c1:C1ComboBoxItem Content="Studio for ActiveX" />
                                <c1:C1ComboBoxItem Content="Studio for Mobile" />
                            </c1:C1ComboBox>

                            <c1:C1FilePicker Width="120" Margin="10 20 10 20"/>

                            <c1:C1NumericBox Width="120" Margin="10 20 10 20"/>

                            <c1:C1ColorPicker Width="200" Margin="10 20 10 20"/>

                            <c1:C1HyperlinkButton Content="Follow me!" Margin="20"/>
                            
                            <c1:C1DateTimePicker Name="dateTimePicker" Width="300" Margin="10 20 10 20" />

                            <c1:C1DatePicker Name="datePicker" Width="200" Margin="10 20 10 20" />
                            
                            <RadioButton Content="Show" GroupName="G" Margin="20" VerticalAlignment="Center"/>
                            <RadioButton Content="Hide" GroupName="G" Margin="20" VerticalAlignment="Center"/>

                            <ToggleButton Margin="20" Content="Toggle me!" VerticalAlignment="Center"/>

                            <c1:C1CheckList x:Name="CheckList" Grid.Column="1" Margin="10 20 10 20" Height="340" VerticalAlignment="Center" DisplayMemberPath="Residence" />
                            
                            <c1:C1MultiSelect x:Name="MultiSelect" Margin="10 20 10 20" Width="240" VerticalAlignment="Center" DisplayMemberPath="Name" MaxHeaderItems="2"/>

                            <c1:C1TagEditor x:Name="TagEditor" Margin="10 20 10 20" Width="240"  VerticalAlignment="Center" />


                            <c1:C1Expander Header="Expand me!" Margin="10 20 10 20">
                                <CheckBox Margin="5" VerticalAlignment="Center" x:Name="Condition" Content="Inside C1Expander"/>
                            </c1:C1Expander>
                            
                            <c1:C1RangeSlider Width="160" Margin="10 20 10 20" />
                            <c1:C1RangeSlider Orientation="Vertical" Height="120" Margin="30 20 10 20" />

                            <c1:C1ProgressBar Value="50" Width="200" Height="10" />
                            <c1:C1ProgressBar Value="50" Width="100" Height="10" IsIndeterminate="True" Margin="20 0 0 0"/>
                            <c1:C1ProgressIndicator IsActive="True" Width="50" Height="50" Header="Test"/>
                        </c1:C1WrapPanel>
                    </ScrollViewer>
                </c1:C1TabItem>

                <!--ExpressionEditor-->
                <c1:C1TabItem Header="ExpressionEditor">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Content="C1ExpressionEditor"/>
                        <c1:C1ExpressionEditor x:Name="ExpressionEditor" Grid.Row="1" Margin="15,0,15,0" Expression="(1 + 1 + Age)" Height="100"/>
                        <c1:C1ExpressionEditorPanel x:Name="ExpressionPanel" ExpressionEditor="{Binding ElementName=ExpressionEditor}" Margin="15,0,15,0" Grid.Row="2"/>
                        <StackPanel Margin="15,0,15,0" Grid.Row="3">
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text="Result : " FontWeight="Bold"/>
                                <TextBlock x:Name="Result" Text="Preview" />
                            </StackPanel>
                            <TextBlock x:Name="Errors" Foreground="Red" TextWrapping="Wrap"  HorizontalAlignment="Left" VerticalAlignment="Top" MinHeight="25" />
                        </StackPanel>
                    </Grid>
                </c1:C1TabItem>

                <!--RichTextBox-->
                <c1:C1TabItem Header="RichTextBox">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <c1:C1SimplifiedRichTextBoxToolbar x:Name="toolbar" RichTextBox="{Binding ElementName=richTB}"/>
                        <c1:C1RichTextBox x:Name="richTB" Grid.Row="1" />

                        <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Grid.Row="2">
                            <c1:C1RichTextBoxToolbar RichTextBox="{Binding ElementName=richTB}">
                                <c1:C1RichTextBoxToolbar.Template>
                                    <ControlTemplate TargetType="c1:C1RichTextBoxToolbar">
                                        <c1:C1ToolbarStrip HorizontalAlignment="Right" Margin="2">
                                            <c1:C1PrintViewTool />
                                            <c1:C1DraftViewTool />
                                            <c1:C1ZoomComboTool />
                                            <c1:C1ZoomSliderTool />
                                        </c1:C1ToolbarStrip>
                                    </ControlTemplate>
                                </c1:C1RichTextBoxToolbar.Template>
                            </c1:C1RichTextBoxToolbar>
                        </Border>
                    </Grid>
                </c1:C1TabItem>
            </c1:C1TabControl>
        </c1:C1TabItem>

        <c1:C1TabItem Header="Navigation &amp; Layout">
            <c1:C1TabControl TabStripPlacement="Left" Margin="8 0 0 0" >
                <!-- Docking -->
                <c1:C1TabItem Header="Docking">
                    <Grid>
                        <c1:C1DockControl x:Name="dockControl">
                            <c1:C1DockGroup>
                                <c1:C1DockTabControl Dock="Top">
                                    <c1:C1DockTabItem Header="Tab 1"/>
                                    <c1:C1DockTabItem Header="Tab 2"/>
                                </c1:C1DockTabControl>
                                <c1:C1DockTabControl>
                                    <c1:C1DockTabItem Header="Tab 3"/>
                                </c1:C1DockTabControl>
                            </c1:C1DockGroup>
                            
                            <c1:C1DockGroup>
                                <c1:C1DockTabControl Dock="Top" DockWidth="500" DockHeight="500">
                                    <c1:C1DockTabItem Header="Tab 4"/>
                                    <c1:C1DockTabItem Header="Tab 5"/>
                                </c1:C1DockTabControl>
                                <c1:C1DockTabControl>
                                    <c1:C1DockTabItem Header="Tab 6"/>
                                </c1:C1DockTabControl>
                            </c1:C1DockGroup>
                            
                            <c1:C1DockTabControl>
                                <c1:C1DockTabItem Header="Tab 7"/>
                                <c1:C1DockTabItem Header="Tab 8"/>
                            </c1:C1DockTabControl>
                        </c1:C1DockControl>
                    </Grid>
                </c1:C1TabItem>
                
                <!-- Toolbar -->
                <c1:C1TabItem Header="Toolbars">
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="Image" x:Key="tbIcon">
                                <Setter Property="Stretch" Value="None" />
                            </Style>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <GroupBox Header="C1Toolbar" Margin="20,5" Grid.Row="1">
                            <c1:C1Toolbar ShowCollapseButton="True" ShowHelpButton="True" Margin="5">
                                <c1:C1ToolbarTabItem Header="Home">
                                    <!-- Clipboard -->
                                    <c1:C1ToolbarGroup Header="Clipboard">
                                        <c1:C1ToolbarStrip>
                                            <c1:C1ToolbarButton MinWidth="60" HorizontalContentAlignment="Left">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Grid.Column="1" Source="Resources/cut.png" Height="14" Width="9" Margin="7 0 7 0" />
                                                    <TextBlock Text="Cut" VerticalAlignment="Center" TextAlignment="Center" />
                                                </StackPanel>
                                            </c1:C1ToolbarButton>
                                        </c1:C1ToolbarStrip>
                                        <c1:C1ToolbarStrip>
                                            <c1:C1ToolbarButton MinWidth="60" HorizontalContentAlignment="Left">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="Resources/copy.png" Margin="4 0 4 0" Height="13" Width="15" />
                                                    <TextBlock Text="Copy" VerticalAlignment="Center" TextAlignment="Center" />
                                                </StackPanel>
                                            </c1:C1ToolbarButton>
                                        </c1:C1ToolbarStrip>
                                        <c1:C1ToolbarStrip>
                                            <c1:C1ToolbarButton MinWidth="60" HorizontalContentAlignment="Left">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="Resources/paste.png" Width="16" Height="14" Margin="4 0 4 0" />
                                                    <TextBlock Text="Paste" VerticalAlignment="Center" TextAlignment="Center" />
                                                </StackPanel>
                                            </c1:C1ToolbarButton>
                                        </c1:C1ToolbarStrip>
                                    </c1:C1ToolbarGroup>

                                    <!-- Font -->
                                    <c1:C1ToolbarGroup Header="Font">
                                        <c1:C1ToolbarStrip>
                                            <c1:C1ComboBox Width="100" Height="22" Margin="0 0 3 0">
                                                <c1:C1ComboBoxItem Content="default" IsSelected="True" />
                                                <c1:C1ComboBoxItem Content="Arial" />
                                                <c1:C1ComboBoxItem Content="Arial Black" />
                                            </c1:C1ComboBox>
                                            <c1:C1ComboBox Width="60" Height="22" Margin="0 0 1 0">
                                                <c1:C1ComboBoxItem Content="8" />
                                                <c1:C1ComboBoxItem Content="9" />
                                                <c1:C1ComboBoxItem Content="10" IsSelected="True" />
                                                <c1:C1ComboBoxItem Content="12" />
                                            </c1:C1ComboBox>
                                        </c1:C1ToolbarStrip>
                                        <c1:C1ToolbarStrip>
                                            <c1:C1ToolbarToggleButton>
                                                <TextBlock Margin='0 2 0 0' Text="B" FontFamily="Times New Roman" FontSize="12" FontWeight="Bold" TextAlignment="Center" />
                                            </c1:C1ToolbarToggleButton>
                                            <c1:C1ToolbarToggleButton>
                                                <TextBlock Text="I" FontFamily="Times New Roman" FontSize="12" FontWeight="Bold" FontStyle="Italic" TextAlignment="Left" Margin="0 2 0 0" />
                                            </c1:C1ToolbarToggleButton>
                                            <c1:C1ToolbarToggleButton>
                                                <TextBlock Text="U" FontFamily="Times New Roman" FontSize="12" FontWeight="Bold" TextDecorations="Underline" TextAlignment="Left" Margin="0 2 0 0" />
                                            </c1:C1ToolbarToggleButton>
                                            
                                            <c1:C1Separator />

                                            <c1:C1ToolbarToggleButton>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontFamily="Times New Roman" FontSize="12" Text="X" TextWrapping="Wrap" FontWeight="Bold" TextAlignment="Left" Margin="2,2,0,0" />
                                                    <TextBlock TextWrapping="Wrap" FontSize="7" FontFamily="Times New Roman" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontWeight="Normal" Margin="0 0 2 0" />
                                                </StackPanel>
                                            </c1:C1ToolbarToggleButton>
                                            <c1:C1ToolbarToggleButton>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="X" FontFamily="Times New Roman" FontSize="12" FontWeight="Bold" Margin="2,2,0,0" />
                                                    <TextBlock Text="2" FontSize="7" FontFamily="Times New Roman" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="0,0,1,5" FontWeight="Normal"/>
                                                </StackPanel>
                                            </c1:C1ToolbarToggleButton>

                                        </c1:C1ToolbarStrip>
                                        <c1:C1ToolbarStrip>
                                            <c1:C1ColorPicker Width="100" />
                                        </c1:C1ToolbarStrip>
                                    </c1:C1ToolbarGroup>

                                    <!-- Paragraph -->
                                    <c1:C1ToolbarGroup Header="Paragraph">
                                        <c1:C1ToolbarGroup.GroupSizeDefinitions>
                                            <c1:C1ToolbarGroupSizeDefinition>
                                                <c1:C1ToolbarControlSize>Small</c1:C1ToolbarControlSize>
                                            </c1:C1ToolbarGroupSizeDefinition>
                                        </c1:C1ToolbarGroup.GroupSizeDefinitions>
                                        <c1:C1ToolbarStrip>
                                            <c1:C1ToolbarToggleButton GroupName="Align" IsChecked="true">
                                                <Image Style="{StaticResource tbIcon}" Source="resources/alignleft_16x.png" Width="16" Height="16" Stretch="Uniform" />
                                            </c1:C1ToolbarToggleButton>
                                            <c1:C1ToolbarToggleButton GroupName="Align" >
                                                <Image Style="{StaticResource tbIcon}" Source="Resources/alignright_16x.png" Width="16" Height="16" Stretch="Uniform" />
                                            </c1:C1ToolbarToggleButton>
                                            <c1:C1ToolbarToggleButton GroupName="Align">
                                                <Image Style="{StaticResource tbIcon}" Source="Resources/alignstretchhorizontal_16x.png" Width="16" Height="16" Stretch="Uniform" />
                                            </c1:C1ToolbarToggleButton>
                                        </c1:C1ToolbarStrip>
                                    </c1:C1ToolbarGroup>

                                    <!-- Shapes -->
                                    <c1:C1ToolbarGroup Header="Shapes">
                                        <c1:C1ToolbarStrip Padding="0">
                                            <c1:C1ToolbarToggleButton GroupName="Shape" IsChecked="true">
                                                <Image Style="{StaticResource tbIcon}" Source="Resources/shape_circle.png" Width="16" Height="16" Stretch="Uniform" />
                                            </c1:C1ToolbarToggleButton>
                                            <c1:C1ToolbarToggleButton GroupName="Shape">
                                                <Image Style="{StaticResource tbIcon}" Source="Resources/shape_ellipse.png" Width="16" Height="16" Stretch="Uniform" />
                                            </c1:C1ToolbarToggleButton>
                                            <c1:C1ToolbarToggleButton GroupName="Shape">
                                                <Image Style="{StaticResource tbIcon}" Source="Resources/shape_hexagon.png" Width="16" Height="16" Stretch="Uniform" />
                                            </c1:C1ToolbarToggleButton>
                                        </c1:C1ToolbarStrip>
                                        <c1:C1ToolbarStrip Padding="0">
                                            <c1:C1ToolbarToggleButton GroupName="Shape">
                                                <Image Style="{StaticResource tbIcon}" Source="Resources/shape_octagon.png" Width="16" Height="16" Stretch="Uniform" />
                                            </c1:C1ToolbarToggleButton>
                                            <c1:C1ToolbarToggleButton GroupName="Shape">
                                                <Image Style="{StaticResource tbIcon}" Source="Resources/shape_pentagon.png" Width="16" Height="16" Stretch="Uniform" />
                                            </c1:C1ToolbarToggleButton>
                                            <c1:C1ToolbarToggleButton GroupName="Shape">
                                                <Image Style="{StaticResource tbIcon}" Source="Resources/shape_rectangle.png" Width="16" Height="16" Stretch="Uniform" />
                                            </c1:C1ToolbarToggleButton>
                                        </c1:C1ToolbarStrip>
                                        <c1:C1ToolbarStrip Padding="0">
                                            <c1:C1ToolbarToggleButton GroupName="Shape">
                                                <Image Style="{StaticResource tbIcon}" Source="Resources/shape_rhomb.png" Width="16" Height="16" Stretch="Uniform" />
