<UserControl x:Class="OutlookBarSamples.Contacts" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    
    <Grid x:Name="LayoutRoot">
        <c1:C1TreeView x:Name="contacts" BorderThickness="0">
            <c1:C1TreeViewItem Header="My Contacts" IsExpanded="True">
                <c1:C1TreeViewItem>
                    <c1:C1TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Resources/NewContact.png" />
                            <TextBlock Text="Contacts" />
                        </StackPanel>
                    </c1:C1TreeViewItem.Header>
                </c1:C1TreeViewItem>
                <c1:C1TreeViewItem>
                    <c1:C1TreeViewItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Resources/NewContact.png" />
                            <TextBlock Text="Suggested Contacts" />
                        </StackPanel>
                    </c1:C1TreeViewItem.Header>
                </c1:C1TreeViewItem>
            </c1:C1TreeViewItem>
        </c1:C1TreeView>
    </Grid>
</UserControl>