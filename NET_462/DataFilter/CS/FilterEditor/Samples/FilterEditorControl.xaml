<UserControl x:Class="FilterEditor.FilterEditorSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:c1df="clr-namespace:C1.DataFilter;assembly=C1.WPF.DataFilter.4.6.2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <c1:C1SimplifiedRibbon>
            <c1:C1SimplifiedTabItem Header="Themes">
                <c1:C1SimplifiedRibbonGroup Header="Themes">
                    <c1:C1ComboBox x:Name="cmbTheme" Height="30" IsEditable="False" SelectedItemChanged="cmbTheme_SelectedItemChanged" Width="150" Margin="5" />
                </c1:C1SimplifiedRibbonGroup>
            </c1:C1SimplifiedTabItem>
        </c1:C1SimplifiedRibbon>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <c1:C1FilterEditor x:Name="filterEditor" Grid.Column="0" Grid.Row="0">
                <c1:C1FilterEditor.Expression>
                    <c1df:CombinationExpression FilterCombination="Or">
                        <c1df:CombinationExpression.Expressions>
                            <c1df:OperationExpression
                            PropertyName="Brand"
                            FilterOperation="EqualText"
                            Value="Rolls-Royce"
                        />
                            <c1df:OperationExpression
                            PropertyName="Brand"
                            FilterOperation="Contains"
                            Value="M"
                        />
                        </c1df:CombinationExpression.Expressions>
                    </c1df:CombinationExpression>
                </c1:C1FilterEditor.Expression>
            </c1:C1FilterEditor>
            <c1:C1FlexGrid AutoGenerateColumns="False" x:Name="flexGrid" Grid.Column="1" Grid.Row="0">
                <c1:C1FlexGrid.Columns>
                    <c1:Column Header="ID" Binding="{Binding ID}" />
                    <c1:Column Header="Brand" MinWidth="120" Binding="{Binding Brand}" />
                    <c1:Column Header="Model" MinWidth="200" Binding="{Binding Model}" />
                    <c1:Column Header="Price" Binding="{Binding Price}" />
                    <c1:Column Header="Category" Binding="{Binding Category}" />
                </c1:C1FlexGrid.Columns>
            </c1:C1FlexGrid>
        </Grid>
    </Grid>
</UserControl>
