<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="BasicControls.InputHandling" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Grid x:Name="FramePanel" Background="Transparent">
        <Border x:Name="Rectangle" Background="Red" Width="100" Height="100" VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBlock Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Run Text="Drag me," />
                <LineBreak />
                <Run Text="Zoom me," />
                <LineBreak />
                <Run Text="and" />
                <LineBreak />
                <Run Text="Click me!" />
            </TextBlock>
            <Border.RenderTransform>
                <TransformGroup>
                    <TranslateTransform X="100" Y="100" />
                    <ScaleTransform />
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
    </Grid>
</UserControl>