<UserControl
    x:Class="FlexChart101.Tooltips"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Chart="http://schemas.componentone.com/winfx/2006/xaml"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
    mc:Ignorable="d">

    <Grid>
        <Chart:C1FlexChart x:Name="flexChart" BindingX="Country" ItemsSource="{Binding DataContext.Data}" ToolTipContent="{}{seriesName}&#10;{x}-{y}">
            <Chart:Series SeriesName="Sales" Binding="Sales" />
            <Chart:Series SeriesName="Expenses" Binding="Expenses" />
        </Chart:C1FlexChart>
    </Grid>
</UserControl>
