<UserControl x:Class="BitmapSamples.FaceWarp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BitmapSamples"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="button1" Content="Load Image" Click="LoadImage" Margin="0 0 10 0" Width="120" Height="30" />
            <Button x:Name="button2" Content="Export Image" Click="ExportImage" Margin="0 0 10 0" Width="120" Height="30" />
            <Button x:Name="button3" Content="Restart" Click="Restart" Width="120" Height="30" />
        </StackPanel>
        <Grid Name="imageGrid" Grid.Row="1" Margin="0 0 0 4" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Stretch="None" Name="image" />
        </Grid>
    </Grid>
</UserControl>
