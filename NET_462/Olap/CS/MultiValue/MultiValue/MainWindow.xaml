<Window x:Class="MultiValue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml">
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Padding="4 8">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="ComponentOne C1Olap for WPF" FontSize="16" FontWeight="Bold" Foreground="Navy" />
                <TextBlock Text="The page below is a single C1OlapPage control that contains a C1OlapPanel, a C1OlapGrid and a C1OlapChart." Foreground="Navy" />
            </StackPanel>
        </Border>

        <c1:C1OlapPage Name="_olapPage" Grid.Row="1" />
    </Grid>
</Window>
