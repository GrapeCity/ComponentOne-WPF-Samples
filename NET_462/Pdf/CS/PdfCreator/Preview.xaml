<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:my="clr-namespace:PdfCreator" xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" x:Class="PdfCreator.Preview" Title="PDF Preview" Height="450" Width="600" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="btnSave" HorizontalAlignment="Right" Grid.Row="0" Content="Save PDF" Margin="0,0,5,0" />
        <c1:C1FlexViewer Grid.Row="1" x:Name="fv" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ZoomMode="PageWidth" DocumentListVisible="True" />
    </Grid>
</Window>