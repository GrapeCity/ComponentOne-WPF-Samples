<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
                    xmlns:GanttView="clr-namespace:C1.GanttView;assembly=C1.WPF.GanttView.4.6.2"
                    xmlns:local="clr-namespace:PrintingSample">
    <ControlTemplate x:Key="CustomerTemplate" TargetType="{x:Type c1:PrintPageContent}">
        <Grid>
            <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBlock Text="Sample" FontSize="120" VerticalAlignment="Center" HorizontalAlignment="Center" FontStyle="Italic" Foreground="#88000000" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <RotateTransform Angle="45"/>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>